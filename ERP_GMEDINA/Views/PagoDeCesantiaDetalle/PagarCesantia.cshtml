@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<head>
	<meta charset="UTF-8">
</head>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Pago de Cesantías</h5>
                    <div class="ibox-tools" id="boxTools">
                        <div style="display:inline-block; bottom: 4.4px;" class="col-sm-1 pull-right" hidden id="SpinnerData"></div>
						@Html.ActionLink("Regresar", "Index", "PagoDeCesantiaDetalle", null, new { @class = "btn btn-primary btn-xs" } )
                        <input type="button" id="ProcesarCalculo" value="Procesar Cálculo de Cesantía" class="btn btn-primary btn-xs" />
                        <input type="button" id="btnImprimirExcel" value="Imprimir Excel" class="btn btn-primary btn-xs" />
                        <input type="button" id="btnGenerarCesantia" value="Generar Cesantía" class="btn btn-primary btn-xs" />
                    </div>
                    <div id="dvjson" style="visibility:hidden;"></div>
                </div>
                <div class="ibox-content">
                    <table id="TablaPagoDeCesantiaDetalle" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Número</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Identidad</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Nombre completo</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Días a pagar</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Sueldo bruto</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Cesantía proporcional</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">No. de Cuenta</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyPagoCesantia">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/General/PagoCesantia")
}

@section Styles {
    @Styles.Render("~/Content/app/General")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}