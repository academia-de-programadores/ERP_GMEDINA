@model IEnumerable<ERP_GMEDINA.Models.tbCargos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbCargos</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>List of tbCargos</h5>
                    <div class="ibox-tools">
                       @Html.ActionLink("Registrar tbCargos", "Create", null, new { @class = "btn btn-primary btn-xs"})
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.car_Descripcion)</th>
                            @*<th>@Html.DisplayNameFor(model => model.car_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.car_RazonInactivo)</th>*@
                            <th>@Html.DisplayNameFor(model => model.car_UsuarioCrea)</th>
                            <th>@Html.DisplayNameFor(model => model.car_FechaCrea)</th>
                            @*<th>@Html.DisplayNameFor(model => model.car_FechaModifica)</th>*@
                            @*<th>@Html.DisplayNameFor(model => model.tbUsuario1.usu_NombreUsuario)</th>*@
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.car_Id">
                            <td>
                                @Html.DisplayFor(modelItem => item.car_Descripcion)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.car_Estado)
                            </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.car_RazonInactivo)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.car_FechaCrea)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.tbUsuario1.usu_NombreUsuario)
                            </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.car_FechaModifica)
                            </td>*@
                           <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.car_Id },  new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.car_Id }, new {@class = "btn btn-default btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    

 @*MODAL CREAR*@
<div class="modal inmodal fade" id="ModalCrear" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Crear Horario</h4>
            </div>
            <div class="modal-body">
                <p>
                    @*--PARTIAL VIEW AQUI--*@
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnAgregar" data-dismiss="modal">Agregar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL CREAR*@

@*MODAL EDITAR*@
<div class="modal inmodal fade" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Editar Horario</h4>
            </div>
            <div class="modal-body" id="ModalEdit">
                @*--PARTIAL VIEW AQUI--*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnEditarModal" data-dismiss="modal">Agregar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL EDITAR*@

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
}
