@model IEnumerable<ERP_GMEDINA.Models.tbCatalogoDeDeducciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Catálogo de Deducciones</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" id="btnAgregarCatalogoDeducciones">Registrar Deduccion</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblCatalogoDeducciones" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 160px;">@Html.DisplayNameFor(model => model.cde_DescripcionDeduccion)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 160px;">@Html.DisplayNameFor(model => model.cde_PorcentajeColaborador)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 140px;">@Html.DisplayNameFor(model => model.cde_PorcentajeEmpresa)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tbTipoDeduccion.tde_Descripcion)</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyDeducciones">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_DescripcionDeduccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_PorcentajeColaborador)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_PorcentajeEmpresa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbTipoDeduccion.tde_Descripcion)
                                    </td>
                                    <td>
                                        <button  data-id="@item.cde_IdDeducciones"  type="button" class="btn btn-primary btn-xs" id="btnDetalleCatalogoDeducciones">Detalles</button>
                                        <button data-id="@item.cde_IdDeducciones" type="button" class="btn btn-default btn-xs" id="btnEditarCatalogoDeducciones">Editar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="EditarCatalogoDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="IconCerrarEdit"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="col-md-offset-4"><strong>Editar Deducción</strong></h2>
            </div>
            <div class="modal-body" id="Editar">
                @*Mandamos un nuevo modelo solo para poder cargar la página *@
                @Html.Partial("_EditCatalogoDeducciones", new ERP_GMEDINA.Models.tbCatalogoDeDeducciones())
            </div>     
        </div>
    </div>
</div>
<div class="modal fade" id="AgregarCatalogoDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="IconCerrarCreate"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h2 class="col-md-offset-4"><strong>Agregar Deducción</strong></h2>
            </div>
            <div class="modal-body" id="Crear">
                @Html.Partial("_CreateCatalogoDeducciones", new ERP_GMEDINA.Models.tbCatalogoDeDeducciones())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="DetallesCatalogoDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Detalles</h4>
            </div>
            <div class="modal-body" id="Detalles">
                @Html.Partial("_DetalleCatalogoDeDeducciones", new ERP_GMEDINA.Models.tbCatalogoDeDeducciones())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="InactivarCatalogoDeducciones" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Inactivar</h4>
            </div>
            <div class="modal-body" id="Inactivar">
                ¿Esta seguro que desea Inactivar este registro?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary col-md-2" id="btnInactivarRegistroDeduccion">Inactivar</button>
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/CatalogoDeducciones.js")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
