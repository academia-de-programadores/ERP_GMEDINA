@model ERP_GMEDINA.Models.tbDeduccionesIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreateDeduccionIndividual" }))
{
    <div class="modal-body" id="Crear">
        @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales)

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_Motivo)<span id="astMotivo">*</span>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dei_Motivo, new { htmlAttributes = new { @class = "form-control", @id = "dei_Motivo", @maxlength= "100" } })
                    <label class="text-danger" id="valMotivo" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Motivo Requerido.</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.emp_Id)<span id="astEmpId">*</span>
                </div>
                <div class="col-md-8">
                    <select id="emp_IdCreate" name="emp_Id" class="form-control"></select>
                    <label class="text-danger" id="valEmpId" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Empleado Requerido.</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_Monto)<span id="astMonto">*</span>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dei_Monto, new { htmlAttributes = new { @class = "form-control MascaraCantidad", @id = "dei_Monto" } })
                    <span id="valMonto" class="text-danger" style="display:none;">El campo Monto no puede ser menor o igual que cero.</span>
                    <span id="valMontoRequerido" class="text-danger" style="display:none;">Campo Monto Requerido</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_NumeroCuotas)<span id="astNumeroCuotas">*</span>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dei_NumeroCuotas, new { htmlAttributes = new { @class = "form-control MascaraCantidad", id="dei_NumeroCuotas"} })
                    <span id="valNumeroCuotasRequerido" class="text-danger" style="display:none;">Campo numero cuotas Requerido</span>
                    <span id="valNumeroCuotasMayor" class="text-danger" style="display:none;">El campo numero cuotas no puede ser menor Cero.</span>
                   
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_MontoCuota)<span id="astMontoCuota">*</span>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dei_MontoCuota, new { htmlAttributes = new { @class = "form-control MascaraCantidad", @id = "dei_MontoCuota"} })
                    <span id="valMontoCuota" class="text-danger" style="display:none;">Campo Cuota Requerido</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_PagaSiempre)
                </div>
                <div class="col-md-8">
                    <input type="checkbox" class="icheckbox_square-green" name="dei_PagaSiempre" id="dei_PagaSiempre">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dei_DeducirISR)
                </div>
                <div class="col-md-8">
                    <input type="checkbox" class="icheckbox_square-green" name="dei_DeducirISR" id="dei_DeducirISR">
                </div>
            </div>
        </div>
    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white pull-right" id="btnCerrarCrear">Cerrar</button>
            <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroDeduccionIndividual">Guardar</button>
            <div style="display:none" class="btn pull-left" id="cargandoCrear"></div>
        </div>
}




