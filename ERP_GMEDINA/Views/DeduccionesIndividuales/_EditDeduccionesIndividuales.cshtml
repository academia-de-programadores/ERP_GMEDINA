@model ERP_GMEDINA.Models.tbDeduccionesIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditarDeduccionIndividual" }))
{
    <div class="modal-body" id="Editar">
            @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales, new { htmlAttributes = new { @class = "form-control", @id = "dei_IdDeduccionesIndividuales" } })
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_Motivo)<span id="astMotivo">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_Motivo, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_Motivo" } })
                        @Html.ValidationMessageFor(model => model.dei_Motivo, "", new { @class = "text-danger", @id = "valMotivo" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.emp_Id)<span id="astEmpId">*</span>
                    </div>
                    <div class="col-md-8">
                        <select id="emp_Id" name="emp_Id" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_MontoInicial)<span id="astMontoInicial">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_MontoInicial, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_MontoInicial", @min = 0.01, @max = 9999999999.99 } })
                        @Html.ValidationMessageFor(model => model.dei_MontoInicial, "", new { @class = "text-danger", @id = "valMontoInicial" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_MontoRestante)<span id="astMontoRestante">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_MontoRestante, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_MontoRestante", @min = 0.01, @max = 9999999999.99 } })
                        @Html.ValidationMessageFor(model => model.dei_MontoRestante, "", new { @class = "text-danger", @id = "validatione4" })
                        <span id="valMontoRestante" class="text-danger" style="display:none;">El campo rango fin no puede ser mayor que rango inicio</span>
                    </div>
                    </div>
               

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_Cuota)<span id="astCuota">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_Cuota, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_Cuota", @min = 0.01, @max = 9999999999.99 } })
                        @Html.ValidationMessageFor(model => model.dei_Cuota, "", new { @class = "text-danger", @id = "valCuota" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_PagaSiempre)
                    </div>
                    <div class="col-md-8">
                        <input type="checkbox" class="icheckbox_square-green" name="dei_PagaSiempre" id="dei_PagaSiempre">
                    </div>
                </div>

            </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnEditDeduccionIndividual">Actualizar</button>
        <button type="button" class="btn btn-danger pull-left" id="btnInactivarDeduccionesIndividuales">Inactivar</button>
    </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarDeduccionIndividual" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales)
}
