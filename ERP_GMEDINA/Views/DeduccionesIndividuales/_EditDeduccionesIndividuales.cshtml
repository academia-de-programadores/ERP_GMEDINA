@model ERP_GMEDINA.Models.tbDeduccionesIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditarDeduccionIndividual" }))
{
    <div class="ibox-content">
        @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales)

                <div class="form-group" >
                    @Html.LabelFor(model => model.dei_Motivo, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dei_Motivo, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_Motivo" } })
                        @Html.ValidationMessageFor(model => model.dei_Motivo, "", new { @class = "text-danger", @id = "validatione1" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.emp_Id, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        <select id="emp_IdEmpleado" name="emp_Id" class="form-control"></select>
                        <label class="text-danger" id="Validation_descipcion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">No puede dejar campos vacios.</label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.dei_MontoInicial, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dei_MontoInicial, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_MontoInicial" } })
                        @Html.ValidationMessageFor(model => model.dei_MontoInicial, "", new { @class = "text-danger", @id = "validatione3" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.dei_MontoRestante, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dei_MontoRestante, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_MontoRestante" } })
                        @Html.ValidationMessageFor(model => model.dei_MontoRestante, "", new { @class = "text-danger", @id = "validatione4" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.dei_Cuota, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dei_Cuota, new { htmlAttributes = new { @class = "text-box single-line", @id = "dei_Cuota" } })
                        @Html.ValidationMessageFor(model => model.dei_Cuota, "", new { @class = "text-danger", @id = "validatione5" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.dei_PagaSiempre, htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">    
                            <input type="checkbox" class="i-checks" id="dei_PagaSiempre" />
                        </div>
                    </div>

            </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
        <button type="button" class="btn btn-primary pull-left" id="btnEditDeduccionIndividual">Actualizar</button>
        <button type="button" class="btn btn-danger pull-left" id="btnInactivarDeduccionesIndividuales">Inhabilitar</button>
    </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarDeduccionIndividual" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales)
}
