@model ERP_GMEDINA.Models.tbDeduccionesIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditarDeduccionIndividual" }))
{
    <div class="modal-body" id="Editar">
            @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales, new { htmlAttributes = new { @class = "form-control", @id = "dei_IdDeduccionesIndividuales" } })
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_Motivo)<span id="astMotivo">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_Motivo, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @autocomplete = "off", @id = "dei_Motivo", onkeyup = "ValidarEditarDeduccionIndividual(this.value, '-1', '-1', '-1', '-1')" } })
                        <label class="text-danger" id="valMotivo" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Motivo Requerido.</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.emp_Id)<span id="astEmpId">*</span>
                    </div>
                    <div class="col-md-8">
                        <select id="emp_Id" name="emp_Id" class="form-control" onchange="ValidarEditarDeduccionIndividual('-1', this.value, '-1', '-1', '-1')"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_Monto)<span id="astMonto">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_Monto, new { htmlAttributes = new { @class = "form-control MascaraCantidad", @autocomplete = "off", @id = "dei_Monto", onkeyup = "ValidarEditarDeduccionIndividual('-1', '-1', this.value ,'-1', '-1')" } })
                        <span id="valMonto" class="text-danger" style="display:none;">El campo Monto no puede ser menor o igual que cero.</span>
                        <span id="valMontoRequerido" class="text-danger" style="display:none;">Campo Monto Requerido</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_NumeroCuotas)<span id="astNumeroCuotas">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_NumeroCuotas, new { htmlAttributes = new { @class = "form-control MascaraCantidad", @autocomplete = "off", @id = "dei_NumeroCuotas", onkeyup = "ValidarEditarDeduccionIndividual('-1', '-1', '-1', this.value , '-1')" } })
                        <span id="valNumeroCuotasRequerido" class="text-danger" style="display:none;">Campo Monto Restante Requerido</span>
                        <span id="valNumeroCuotasMayor" class="text-danger" style="display:none;">El campo monto restante no puede ser menor Cero.</span>
                     </div>
                    </div>
               

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_MontoCuota)<span id="astMontoCuota">*</span>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.dei_MontoCuota, new { htmlAttributes = new { @class = "form-control MascaraCantidad", @autocomplete = "off", @readonly = "true", @id = "dei_MontoCuota", onkeyup = "ValidarEditarDeduccionIndividual('-1', '-1', '-1', '-1', this.value)" } })
                        <span id="valMontoCuota" class="text-danger" style="display:none;">Campo Monto Cuota Requerido</span>
                        <span id="valMontoCuotaMayor" class="text-danger" style="display:none;">Campo Monto Cuota no puede ser mayor que el monto inicial</span>
                     </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_PagaSiempre)
                    </div>
                    <div class="col-md-8">
                        <input type="checkbox" class="icheckbox_square-green" name="dei_PagaSiempre" id="dei_PagaSiempre">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.dei_DeducirISR)
                    </div>
                    <div class="col-md-8">
                        <input type="checkbox" class="icheckbox_square-green" name="dei_DeducirISR" id="dei_DeducirISR">
                    </div>
                </div>

            </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnEditDeduccionIndividual">Actualizar</button>
        <button type="button" class="btn btn-danger pull-left" id="btnInactivarDeduccionesIndividuales">Inactivar</button>
    </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarDeduccionIndividual" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.dei_IdDeduccionesIndividuales)
}
