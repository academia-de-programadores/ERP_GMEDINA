@model ERP_GMEDINA.Models.tbEmpleadoBonos

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoBonosCreate" }))
        {
            <div class="modal-body" id="Crear">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            Colaborador
                            <label class="" id="AsteriscoEmpleado">*</label> 
                            <select id="emp_IdEmpleadoCrear" name="emp_Id" class="form-control" onchange="ValidarCamposCrear(this.value, '-1', '-1')"></select>
                            @*<label class="text-danger" id="Validation_descipcion2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;"></label>*@
                            <span class="field-validation-valid text-danger" style="display: none;" id="Validation_IdEmpleado">El campo colaborador es requerido.</span>
                        </div>
                        <div class="col-md-6">
                            Bono
                            <label class="" id="AsteriscoBono">*</label>                         
                            <select id="cin_IdIngreso" name="cin_IdIngreso" class="form-control" onchange="ValidarCamposCrear('-1', this.value, '-1')"></select>
                            @*<label class="text-danger" id="Validation_descipcion4" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El Campo bono es requerido</label>*@
                            <span class="field-validation-valid text-danger" style="display: none;" id="Validation_IdIngreso">El campo bono es requerido.</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                             Monto
                            <label class="" id="AsteriscoMonto">*</label>  
                            @Html.EditorFor(model => model.cb_Monto, new { htmlAttributes = new { @class = "col-md-9 MascaraCantidad soloNumero", @name = "cb_Monto", @id = "cb_Monto", @autocomplete = "off", @onkeyup = "ValidarCamposCrear('-1', '-1', this.value)"} })
                             <br />
                            <span class="field-validation-valid text-danger" style="display: none;" id="Validation_Monto">El campo monto es requerido.</span>
                                 
                        </div>
                        <div class="Col-md-6" style="display: none">
                            @Html.LabelFor(model => model.cb_FechaRegistro, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.cb_FechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
                                @*@Html.ValidationMessageFor(model => model.cb_FechaRegistro, "", new { @class = "text-danger" })*@
                                <span class="field-validation-valid text-danger" style="display: none;" id="Validation_FechaRegistro">El campo monto es requerido.</span>
                            </div>
                        </div>
                    </div>
                </div>
                   

                <div class="form-group" style="display: none">
                    @Html.LabelFor(model => model.cb_Pagado, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.cb_Pagado)
                            @*@Html.ValidationMessageFor(model => model.cb_Pagado, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal" id="btnCerrarCrearBono">Cerrar</button>
                <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroBonos">Guardar</button>
            </div>
        }

