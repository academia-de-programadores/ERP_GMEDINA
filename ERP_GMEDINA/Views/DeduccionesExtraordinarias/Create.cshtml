@model ERP_GMEDINA.Models.tbDeduccionesExtraordinarias

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Agregar Deducción por Equipo de Trabajo</h2>
                </div>

                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreate" }))
                {
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.eqem_Id)<span id="ast1">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("eqem_Id", null, "Seleccione una Opción...", htmlAttributes: new { @class = "form-control", @id = "eqemp_Id" })
                                    <label class="text-danger" id="val1" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Equipo Empleado Requerido.</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.dex_MontoInicial)<span id="ast2">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_MontoInicial, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_MontoInicial, "", new { @class = "text-danger", @id = "val2" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.dex_MontoRestante)<span id="ast3">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_MontoRestante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_MontoRestante, "", new { @class = "text-danger", @id = "val3" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.dex_ObservacionesComentarios)<span id="ast4">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_ObservacionesComentarios, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_ObservacionesComentarios, "", new { @class = "text-danger", @id = "val4" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.cde_IdDeducciones)<span id="ast5">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("cde_IdDeducciones", null, "Seleccione una Opción...", htmlAttributes: new { @class = "form-control", @id = "cde_Id" })
                                    <label class="text-danger" id="val5" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Deducción Requerido.</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LabelFor(model => model.dex_Cuota)<span id="ast6">*</span>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_Cuota, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_Cuota, "", new { @class = "text-danger", @id = "val6" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="button" id="btnAgregar" value="Guardar" class="btn btn-primary" style="display:block" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                </div>
                }
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/DeduccionesExtraordinarias")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
