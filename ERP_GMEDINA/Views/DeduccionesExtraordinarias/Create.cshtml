@model ERP_GMEDINA.Models.tbDeduccionesExtraordinarias

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Agregar Deducción por Equipo de Trabajo</h2>
                </div>

                @using (Html.BeginForm())
                {
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.eqem_Id, htmlAttributes: new { @class = "control-label col-md-2" })<span id="ast1"></span>
                                <div class="col-md-6">
                                    <select id="eqem_Id" name="eqem_Id" class="form-control"></select>
                                    @Html.ValidationMessageFor(model => model.eqem_Id, "", new { @class = "text-danger", @id = "val1" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dex_MontoInicial, htmlAttributes: new { @class = "control-label col-md-2" })<span id="ast2"></span>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_MontoInicial, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_MontoInicial, "", new { @class = "text-danger", @id = "val2" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dex_MontoRestante, htmlAttributes: new { @class = "control-label col-md-2" })<span id="ast3"></span>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_MontoRestante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_MontoRestante, "", new { @class = "text-danger", @id = "val3" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dex_ObservacionesComentarios, htmlAttributes: new { @class = "control-label col-md-2" })<span id="ast4"></span>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_ObservacionesComentarios, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_ObservacionesComentarios, "", new { @class = "text-danger", @id = "val4" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.cde_IdDeducciones, htmlAttributes: new { @class = "control-label col-md-2" <span id="ast5"></span>
                                <div class="col-md-6">
                                    <select id="cde_IdDeducciones" name="cde_IdDeducciones" class="form-control"></select>
                                    @Html.ValidationMessageFor(model => model.cde_IdDeducciones, "", new { @class = "text-danger", @id = "val5" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dex_Cuota, htmlAttributes: new { @class = "control-label col-md-2" })<span id="ast6"></span>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.dex_Cuota, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dex_Cuota, "", new { @class = "text-danger", @id = "val6" })
                                </div>
                            </div>
                            @{ 

                            }
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" id="btnAgregar" value="Guardar" class="btn btn-primary" />
                                    <div style="display:none" class="btn" id="cargandoCrear">
                                    </div>
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/DeduccionesExtraordinarias")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
