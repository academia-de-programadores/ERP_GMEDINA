@model IEnumerable<ERP_GMEDINA.Models.tbInstitucionesFinancieras>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Instituciones Financieras</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Cargar Planilla Deduccion", "CargaDocumento", null, new { @class = "btn btn-primary btn-xs" })
                       @Html.ActionLink("Registrar Institucion Financiera", "Create", null, new { @class = "btn btn-primary btn-xs"})
                    </div>
                </div>
                <div class="ibox-content">
                    @{
                        <!-- obtener la sesion actual del usuario para luego verificar si este es adminsitrador-->
                        var oUsuario = (ERP_GMEDINA.Models.tbUsuario)HttpContext.Current.Session["sesionUsuario"];

                        <!-- Esto es para hacer las validaciones del rol de usuario a la hora de recargar la tabla con el JS -->
                        string rol_Usuario = oUsuario?.usu_EsAdministrador == true ? "1" : "0";

                        <!-- Tomaremos el valor de este input en el JS para validar si el usuario es administrador-->
                        <input type="hidden" name="rol_Usuario" id="rol_Usuario" value="@rol_Usuario" />
                    }
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.insf_IdInstitucionFinanciera)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_DescInstitucionFinanc)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Contacto)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Correo)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Activo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model)
                      {
                         string estado = item.insf_Activo == false ? "Inactivo" : "Activo";

                        <tr class="gradeA odd" role="row" data-id="@item.insf_IdInstitucionFinanciera">
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_IdInstitucionFinanciera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_DescInstitucionFinanc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Contacto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Correo)
                            </td>
                            <td>
                                @estado
                            </td>
							<td>
                                @{
                                    if (item.insf_Activo == true)
                                    {
                                        @*<button type="button" data-id="@item.aces_IdAuxilioCesantia" class="btn btn-primary btn-xs" id="btnModalDetalles">Detalles</button>
                                                <button type="button" data-id="@item.aces_IdAuxilioCesantia" class="btn btn-default btn-xs" id="btnModalEdit">Editar</button>*@
                                                @Html.ActionLink("Detalles", "Details", new { id = item.insf_IdInstitucionFinanciera }, new { @class = "btn btn-primary btn-xs" })
                                                @Html.ActionLink("Editar", "Edit", new { id = item.insf_IdInstitucionFinanciera }, new { @class = "btn btn-default btn-xs" })
                                        <button type="button" data-id="@item.insf_IdInstitucionFinanciera" class="btn btn-danger btn-xs" id="btnModalActivarAuxCes">Inctivar</button>
                                    }
                                    if (oUsuario.usu_EsAdministrador == true && item.insf_Activo == false)
                                    {
                                                 <!-- ACTIVAR -->
                                        <button type="button" data-id="@item.insf_IdInstitucionFinanciera" class="btn btn-primary btn-xs" id="btnModalActivarINFS">Activar</button>
                                    }
                                }
								
								
								
							</td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Scripts.Render("~/plugins/izitoast")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
  @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
