@model IEnumerable<ERP_GMEDINA.Models.tbInstitucionesFinancieras>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Instituciones Financieras</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Instituciones Financieras</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Cargar Planilla Deduccion", "CargaDocumento", null, new { @class = "btn btn-success btn-sm" })
                       @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary btn-sm"})
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.insf_IdInstitucionFinanciera)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_DescInstitucionFinanc)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Contacto)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.insf_Correo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.insf_IdInstitucionFinanciera">
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_IdInstitucionFinanciera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_DescInstitucionFinanc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Contacto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.insf_Correo)
                            </td>
                            <td>
                              @*<button type="button" class="btn btn-primary btn-xs" id="btnDetalle">Detalle</button>
                              <button type="button" class="btn btn-default btn-xs" id="btnEditar">Editar</button>*@
                                @Html.ActionLink("Editar", "Edit", new { id = item.insf_IdInstitucionFinanciera }, new { @class = "btn btn-primary btn-xs" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.insf_IdInstitucionFinanciera }, new { @class = "btn btn-default btn-xs" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.insf_IdInstitucionFinanciera }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Scripts.Render("~/plugins/izitoast")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
  @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
