@model ERP_GMEDINA.Models.tbInstitucionesFinancieras

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h3>Crear Institución Financiera</h3>
          </div>


        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreateInstFin" }))
        {
          <div class="ibox-content">
            @Html.AntiForgeryToken()
              <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                  <div class="form-group">
                          <div class="col-md-2">
                              @Html.LabelFor(model => model.insf_DescInstitucionFinanc, htmlAttributes: new { @class = "control-label"})
                              <label class="" id="AsteriscoDescripcion">*</label>
                          </div>
                          <div class="col-md-8">
                              @Html.EditorFor(model => model.insf_DescInstitucionFinanc, new { htmlAttributes = new { @class = "form-control" } })
                              @Html.ValidationMessageFor(model => model.insf_DescInstitucionFinanc, "", new { @class = "text-danger" })
                          </div>
                      </div>

                  <div class="form-group">
                      <div class="col-md-2">
                          @Html.LabelFor(model => model.insf_Contacto, htmlAttributes: new { @class = "control-label " })
                          <label class="" id="AsteriscoContacto">*</label>
                      </div>
                          <div class="col-md-8">
                              @Html.EditorFor(model => model.insf_Contacto, new { htmlAttributes = new { @class = "form-control" } })
                              @Html.ValidationMessageFor(model => model.insf_Contacto, "", new { @class = "text-danger" })
                          </div>
                      </div>

                  <div class="form-group">
                      <div class="col-md-2">
                          @Html.LabelFor(model => model.insf_Telefono, htmlAttributes: new { @class = "control-label" })
                          <label class="" id="AsteriscoTelefono">*</label>
                      </div>
                          <div class="col-md-8">
                              @Html.EditorFor(model => model.insf_Telefono, new { htmlAttributes = new { @class = "form-control", @name = "phone", @id = "phone" } })
                              @Html.ValidationMessageFor(model => model.insf_Telefono, "", new { @class = "text-danger", @id = "validacionTelefono" })
                          </div>
                      </div>

                  <div class="form-group">
                      <div class="col-md-2">
                          @Html.LabelFor(model => model.insf_Correo, htmlAttributes: new { @class = "control-label " })
                          <label class="" id="AsteriscoCorreo">*</label>
                      </div>
                          <div class="col-md-8">
                              @Html.EditorFor(model => model.insf_Correo, new { htmlAttributes = new { @class = "form-control" }, @type = "email" })
                              @Html.ValidationMessageFor(model => model.insf_Correo, "", new { @class = "text-danger" })
                          </div>
                      </div>

                  <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                      <input type="submit" value="Guardar" class="btn btn-primary" />
      	            @Html.ActionLink("Cancelar", "Index", null, new { @class="btn btn-default"})
                    </div>
                  </div>
                </div>
              </div>
          }
      </div>
    </div>
  </div>
</div>

@*<script>
    $(phone).mask("(999) 9999-9999");
</script>*@

@section Scripts
{
    @Scripts.Render("~/Scripts/app/General/InstitucionesFinancieras")
}
