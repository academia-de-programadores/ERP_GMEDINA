@model ERP_GMEDINA.Models.tbIdiomas
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmDetalle" }))
        {       
            @Html.AntiForgeryToken()
              <div class="form-horizontal">
                  <div class="form-group">
                    @Html.LabelFor(model => model.idi_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                      @Html.EditorFor(model => model.idi_Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                      @Html.ValidationMessageFor(model => model.idi_Id, "", new { @class = "text-danger" })
                    </div>
                  </div>

                  <div class="form-group">
                    @Html.LabelFor(model => model.idi_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                      @Html.EditorFor(model => model.idi_Descripcion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                      @Html.ValidationMessageFor(model => model.idi_Descripcion, "", new { @class = "text-danger" })
                    </div>
                  </div>

                </div>
          
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Auditoría</h2>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            <td>@Html.EditorFor(model => model.idi_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                            <td>@Html.EditorFor(model => model.idi_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>@Html.EditorFor(model => model.idi_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                            <td>@Html.EditorFor(model => model.idi_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
	}

