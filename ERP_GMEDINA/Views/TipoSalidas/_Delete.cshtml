@model ERP_GMEDINA.Models.tbTipoSalidas
<div class="modal inmodal" id="ModalInhabilitar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">¿Seguro que desea inhabilitar el registro?</h4>
            </div>
            <div class="modal-body">
              
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormInactivar" }))
                    {
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.tsal_RazonInactivo, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.tsal_RazonInactivo, new { htmlAttributes = new { @class = "form-control required valid",maxlength = 100 } })
                                    @Html.ValidationMessageFor(model => model.tsal_RazonInactivo, "", new { @class = "text-danger", @id = "errortsal_RazonInactivo" })
                                </div>
                            </div>
                        </div>
                    }
             
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary pull-left" id="InActivar">Inhabilitar</button>
            </div>
        </div>
    </div>
</div>
