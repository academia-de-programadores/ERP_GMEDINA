@model ERP_GMEDINA.Models.tbCatalogoDeIngresos
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCatalogoIngresos" }))
{
    @Html.AntiForgeryToken()
    @*<div class="ibox-content">
        <div class="form-horizontal">*@

    <div class="modal-body" id="Editar">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.HiddenFor(model => model.cin_IdIngreso)
                    @Html.HiddenFor(model => model.cin_FechaCrea)
                    @Html.HiddenFor(model => model.cin_UsuarioCrea)
                    @Html.LabelFor(model => model.cin_DescripcionIngreso, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.cin_DescripcionIngreso, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.cin_DescripcionIngreso, "", new { @class = "text-danger", @id = "validareditar" })


                    @*   <span class="field-validation-valid text-danger" style="display: none" id="validareditar">El campo Descripción Ingresos es obligatorio.</span>*@
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnUpdateIngresos">Editar</button>

        <button type="button" class="btn btn-danger pull-left" id="btnModalInactivar">Inhabilitar</button>
    </div>
        @*</div>
    </div>*@
                        }

                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarCatalogoIngresos" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.cin_IdIngreso)
                            @Html.HiddenFor(model => model.cin_FechaCrea)
                            @Html.HiddenFor(model => model.cin_UsuarioCrea)
                        }
                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
