<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Catalogo de ingresos</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" id="btnAgregarCatalogoIngresos">Registrar ingreso</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblCatalogoIngresos" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 150px;">@Html.DisplayNameFor(model => model.cin_IdIngreso)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 456px;">@Html.DisplayNameFor(model => model.cin_DescripcionIngreso)</th>
                                @*<th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cin_UsuarioCrea)</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cin_FechaCrea)</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cin_UsuarioModifica)</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cin_FechaModifica)</th>*@
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 180px;">Acción</th>

                            </tr>
                        </thead>
                        <tbody id="tbodyIngresos">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row" data-id="@item.cin_IdIngreso">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cin_IdIngreso)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cin_DescripcionIngreso)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.cin_UsuarioCrea)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cin_FechaCrea)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cin_UsuarioModifica)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cin_FechaModifica)
                                        </td>*@
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.cin_Activo)
                                        </td>*@

                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" id="btnEditarIngreso" data-id="@item.cin_IdIngreso">Editar</button>
                                        <button type="button" class="btn btn-default btn-xs" id="btnDetalle" data-id="@item.cin_IdIngreso">Detalle</button>
                                        @*<button type="button" class="btn btn-danger btn-xs" id="btnInactivarCatalogoIngresos">Inactivar</button>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr role="row">
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_IdIngreso)</th>
                                <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_DescripcionIngreso)</th>
                                @*<th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_UsuarioCrea)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_FechaCrea)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_UsuarioModifica)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cin_FechaModifica)</th>*@
                                <th rowspan="1" colspan="1">Acción</th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="EditarCatalogoIngresos" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Edición de datos</h4>
            </div>
            <div class="modal-body" id="Editar">
                @*Mandamos un nuevo modelo solo para poder cargar la página *@
                @Html.Partial("_EditCatalogoDeIngresos", new ERP_GMEDINA.Models.tbCatalogoDeIngresos())
            </div>            
        </div>
    </div>
</div>



<div class="modal fade" id="AgregarCatalogoIngresos" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Agregar datos</h4>
            </div>
            <div class="modal-body" id="Crear">
                @Html.Partial("_CreateCatalogoDeIngresos", new ERP_GMEDINA.Models.tbCatalogoDeIngresos())
            </div>
            
        </div>
    </div>
</div>


<div class="modal fade" id="DetailCatalogoIngresos" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Detalle datos</h4>
            </div>
            <div class="modal-body" id="Detallar">
                @Html.Partial("_DetailCatalogoDeIngreso", new ERP_GMEDINA.Models.tbCatalogoDeIngresos())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="InactivarCatalogoIngresos" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Inactivar</h4>
            </div>
            <div class="modal-body" id="Inactivar">
                ¿Esta seguro que desea Inactivar este registro?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger " id="btnInactivarIngresos">Inactivar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/General/CatalogoDeIngresos.js")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}