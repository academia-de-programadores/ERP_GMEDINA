@model ERP_GMEDINA.Models.tbCatalogoDeIngresos
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCatalogoIngresos" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.cin_IdIngreso)
        @Html.HiddenFor(model => model.cin_FechaCrea)
        @Html.HiddenFor(model => model.cin_UsuarioCrea)


        <div class="form-group">
            @Html.LabelFor(model => model.cin_IdIngreso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cin_IdIngreso, new { htmlAttributes = new { @class = "form-control",  @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.cin_IdIngreso, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.cin_DescripcionIngreso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cin_DescripcionIngreso, new { htmlAttributes = new { @class = "form-control",  @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.cin_DescripcionIngreso, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Auditoría</h2>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            @Html.HiddenFor(model => model.cin_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                            <td>@Html.EditorFor(model => model.tbUsuario.usu_NombreUsuario, new{ htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                            <td>@Html.EditorFor(model => model.cin_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            @Html.HiddenFor(model => model.cin_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                            <td>@Html.EditorFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                            <td>@Html.EditorFor(model => model.cin_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @*<div class="footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
            </div>*@
        </div>
    </div>
}
