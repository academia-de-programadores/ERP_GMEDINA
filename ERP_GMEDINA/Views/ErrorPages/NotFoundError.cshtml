@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | 404 Error</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
</head>

<body class="gray-bg">


    <div class="middle-box text-center animated fadeInDown">
        @{
            int idmenuSession = (int)(HttpContext.Current.Session["sesionIdMenu"] ?? 0);
        }

        @if (idmenuSession != 0)
        {
            <h1>404</h1>
            <h3 class="font-bold">Página no encontrada</h3>

            <div class="error-desc">
                Lo sentimos, pero no hemos podido encontrar la página que buscas.
                <br />
                <label>Puedes regresar a la página principal aquí: <br /><a href="@Url.Action("Index","Menu", new { idmenu = idmenuSession})" class="btn btn-primary m-t">Inicio</a></label>
            </div>
        }
        else
        {
            <h1>403</h1>
            <h3 class="font-bold">No tienes acceso a este Recurso</h3>
            <div class="error-desc">
                Lo sentimos, no tienes acceso a esta pagina.
                <br />
                <label>Puedes regresar a la página principal aquí: <br /><a href="@Url.Action("Index","Menu", new { idmenu = 0})" class="btn btn-primary m-t">Inicio</a></label>
            </div>
        }
    </div>

    <!-- Mainly scripts -->
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>



