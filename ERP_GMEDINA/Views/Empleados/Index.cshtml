@model IEnumerable<ERP_GMEDINA.Models.tbEmpleados>

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Empleados</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Empleados</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Empleados" />
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th></th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Identidad)</th>
                            <th>Nombre</th>
                            <th>@Html.DisplayNameFor(model => model.tbDepartamentos.depto_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Edad)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_CorreoElectronico)</th>
                            @*<th>Reportes</th>*@  
                        </tr>
                    </thead>
                    <tbody>
                     
                    </tbody>                       
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>


@*MODAL AGREGAR EMPLEADOS*@

<div class="modal inmodal" id="ModalNuevo" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Agregar Empleados</h4>
            </div>
            <div class="modal-body">
                <p>
                    Use el siguiente boton para descargar el archivo que contiene los campos que debe llenar para la adicion de los empleados.
                </p>
          
                @Html.ActionLink("Descargar Archivo", "ArchivoEmpleados", null, new { @class = "btn btn-primary " })
            

                <p>
                   Al terminar de ingresar los datos en el Archivo, use el siguiente boton para subir y guardar los datos.
                </p>
            @using (Html.BeginForm("UploadEmpleados", "Empleados", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <span class="btn btn-default btn-file"><span class="fileinput-new">Seleccionar</span><span class="fileinput-exists">Cambiar </span>
                    <input type="file" name="FileUpload"  accept=".xls,.xlsx" id="btnUpload"></span>
                    <span class="fileinput-filename"></span>
                    <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                </div>

                @*<input type="file" id="fileUpload" class="btn btn-primary" name="FileUpload" /><br />
                <input type="submit" class="btn btn-primary" name="UploadNewEmployee" id="fileUploadExcel" value="Upload New Employee Details" />*@

                <input type="submit" class="btn btn-primary pull-left" id="btnGuardar" value="Guardar" />
            }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                
            </div>
        </div>
    </div>
</div>
@*MODAL AGREGAR EMPLEADOS*@

    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
@Styles.Render("~/plugins/jasnyBootstrapStyles")

}
@section Scripts {
@Scripts.Render("~/plugins/dataTables")
@Scripts.Render("~/Scripts/app/general")
@Scripts.Render("~/Scripts/app/general/Empleados")
@Scripts.Render("~/plugins/jasnyBootstrap")
}
