@model ERP_GMEDINA.Models.tbEmpleados

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
@using ERP_GMEDINA.Models
@{
    Helpers Login = new Helpers();

}

  

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Empleados</h5>
                    <div class="ibox-tools">
          
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Empleado" />
          
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th></th>
                            <th>@Html.DisplayNameFor(model => model.emp_Id)</th>
                            <th>Nombre</th>
                            <th>@Html.DisplayNameFor(model => model.tbDepartamentos.depto_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.emp_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.tbPersonas.per_CorreoElectronico)</th>
                            <th>Info</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>


@*MODAL AGREGAR EMPLEADOS*@

<div class="modal inmodal" id="ModalNuevo" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Agregar Empleados</h4>
            </div>
            <div class="modal-body">
                <p>
                    Use el siguiente botón para descargar el archivo que contiene los campos que debe llenar para la adición de los empleados.                </p>

                @Html.ActionLink("Descargar Archivo", "ArchivoEmpleados", null, new { @class = "btn btn-primary " })


                <p>
                    Al terminar de ingresar los datos en el Archivo, use el siguiente botón para subir y guardar los datos.                </p>
                @using (Html.BeginForm("UploadEmpleados", "Empleados", FormMethod.Post, new { @enctype = "multipart/form-data", @Id = "FormEmpleados" }))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <span class="btn btn-default btn-file">
                                    <span class="fileinput-new">Seleccionar</span><span class="fileinput-exists">Cambiar </span>
                                    <input type="file" name="FileUpload" accept=".xls,.xlsx" id="btnUpload">
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                            </div>
                        </div>
                        <div class="col-md-12 float-e-margins">
                            <input type="submit" class="btn btn-primary pull-left" id="btnGuardar" value="Guardar" />
                        </div>
                    </div>
                }
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                            @*<button type="button" class="btn btn-primary pull-left" id="btnGuardar" >Guardar</button>*@

                        </div>
                    </div>
        </div>
    </div>
</div>

@*MODAL AGREGAR EMPLEADOS*@

@if (Login.GetUserRols("Empleados/UploadDocumento"))
{
@*MODAL AGREGAR DOCUMENTO*@

<div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Agregar Documento</h4>
            </div>
            <div class="modal-body">
                @*<p>
                        Todos los archivos
                    </p>*@
                <p>
                    Seleccione el archivo que desee guardar, y seleccione la carpeta en donde desea guardarlo.
                </p>

                @*@Html.ActionLink("Descargar Archivo", "ArchivoEmpleados", null, new { @class = "btn btn-primary " })*@

                @using (Html.BeginForm("UploadDocumento", "Empleados", FormMethod.Post, new { @enctype = "multipart/form-data", @Id = "FormEmpleadosDocument" }))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <span class="btn btn-default btn-file">
                                    <span class="fileinput-new">Seleccionar documento</span><span class="fileinput-exists">Cambiar documento </span>
                                    <input type="file" name="FileUpload" id="FileUpload" accept=".xls,.xlsx,.JPEG,.JPG,.PNG,.PDF,.SVG,.doc,.docx" id="btnUploadDocument">
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <select class="form-control m-b" name="tiposArchivo" id="tiposArchivo">
                                <option value="" disabled selected>Seleccione el tipo de archivo</option>
                                <option value="Amonestaciones">Amonestación</option>
                                <option value="Permisos">Permiso</option>
                                <option value="Incapacidades">Incapacidad</option>
                                <option value="Constancia">Constancia</option>
                                <option value="Solicitud">Solicitud</option>
                                <option value="Facturas">Factura</option>
                                <option value="Archivos_Personales">Archivos Personales</option>
                                <option value="Archivos_de_Finalizacion_Laboral">Archivos de Finalizacion Laboral</option>
                                <option value="Otros">Otros</option>

                            </select>
                        </div>
                        <div class="col-md-12 float-e-margins">
                            <input type="submit" class="btn btn-primary pull-left" id="btnGuardarDocumento" value="Guardar" />
                        </div>
                    </div>

                }
                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                    @*<button type="button" class="btn btn-primary pull-left" id="btnGuardar" >Guardar</button>*@

                </div>
            </div>
        </div>
    </div>
</div>

@*MODAL AGREGAR DOCUMENTO*@
}





