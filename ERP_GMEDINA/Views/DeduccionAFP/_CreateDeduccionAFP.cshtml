@model ERP_GMEDINA.Models.tbDeduccionAFP
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreateDeduccionAFP" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.emp_Id)
            </div>
            <div class="col-md-9">
                <select id="emp_Id" name="emp_Id" class="form-control"></select>
                @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger", @id = "validation1d" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.dafp_AporteLps)
            </div>           
            <div class="col-md-9">
                @Html.EditorFor(model => model.dafp_AporteLps, new { htmlAttributes = new { @class = "form-control", @id = "dafp_AporteLps" } })
                @Html.ValidationMessageFor(model => model.dafp_AporteLps, "", new { @class = "text-danger", @id = "validation2d" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.afp_Id)
            </div>
            <div class="col-md-9">
                <select id="afp_Id" name="afp_Id" class="form-control"></select>
                @Html.ValidationMessageFor(model => model.afp_Id, "", new { @class = "text-danger", @id = "validation3d" })
            </div>
        </div>


    </div>
<div class="modal-footer">
    <button type="button" class="btn btn-white pull-right" id="btnCerrarAgregar">Cerrar</button>
    <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroDeduccionAFP">Guardar</button>
    <div style="display:none" class="btn pull-left" id="cargandoCrear"></div>
</div>
}


