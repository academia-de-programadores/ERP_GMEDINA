@model ERP_GMEDINA.Models.tbTechosDeducciones
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTechosDeduccionesCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body" id="Crear">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.tddu_IdTechosDeducciones)
            @Html.HiddenFor(model => model.tddu_FechaCrea)
            @Html.HiddenFor(model => model.tddu_UsuarioCrea)

            <style>
                .asterisco{
                    margin-left:2px;
                }
            </style>

            <div class="form-group">
                <div class="col-md-6">
                    <label class="control-label">Deducción</label><label class="asterisco" id="AsteriskDeduccion">*</label>
                    <select id="cde_IdDeducciones" name="cde_IdDeducciones" class="form-control"></select>
                    <label class="text-danger" id="Validation_deduccion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo deducción requerido.</label>
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.tddu_Techo, htmlAttributes: new { @class = "control-label" })<label class="asterisco" id="AsteriskTecho">*</label>
                    @Html.EditorFor(model => model.tddu_Techo, new { htmlAttributes = new { @class = "form-control MascaraCantidad soloNumero"} })
                    <label class="text-danger" id="Validation_Techo" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Techo requerido.</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.tddu_PorcentajeColaboradores, htmlAttributes: new { @class = "control-label" })<label class="asterisco" id="AsteriskPorcentajeColaborador">*</label>
                    @Html.EditorFor(model => model.tddu_PorcentajeColaboradores, new { htmlAttributes = new { @class = "form-control MascaraPorcentaje soloNumero" } })
                    <label class="text-danger" id="Validation_PorcentajeColaboradores" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Porcentaje Colaborador requerido.</label>
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.tddu_PorcentajeEmpresa, htmlAttributes: new { @class = "control-label" })<label class="asterisco" id="AsteriskPorcentajeEmpresa">*</label>
                    @Html.EditorFor(model => model.tddu_PorcentajeEmpresa, new { htmlAttributes = new { @class = "form-control MascaraPorcentaje soloNumero" } })
                    <label class="text-danger" id="Validation_PorcentajeEmpresa" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Porcentaje Empresa requerido.</label>
                </div>
            </div>
        </div>
    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white pull-right" id="btnCerrarCreateTechosDeducciones" data-dismiss="modal">Cerrar</button>
            <input type="submit" class="btn btn-primary pull-left" id="btnCreateTechoDeducciones" value="Guardar">
        </div>
        }
