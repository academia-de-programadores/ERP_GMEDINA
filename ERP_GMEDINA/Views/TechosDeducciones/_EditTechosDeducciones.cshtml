@model ERP_GMEDINA.Models.tbTechosDeducciones

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditTechosDeducciones" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body" id="Editar">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.tddu_IdTechosDeducciones)
            @Html.HiddenFor(model => model.tddu_FechaCrea)
            @Html.HiddenFor(model => model.tddu_UsuarioCrea)
            <div class="form-group">
                <label class="control-label col-md-2">Descripción Deducción</label>  @* @Html.LabelFor(model => model.cde_IdDeducciones, "cde_IdDeducciones", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    <select id="cde_IdDeducciones" name="cde_IdDeducciones" class="form-control"></select>
                    <label class="text-danger" id="Validation_deduccion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo deducción requerido.</label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.tddu_Techo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tddu_Techo, new { htmlAttributes = new { @class = "form-control ValidarCaracteres"} })
                    <label class="text-danger" id="Validation_Techo" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Techo requerido.</label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.tddu_PorcentajeColaboradores, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tddu_PorcentajeColaboradores, new { htmlAttributes = new { @class = "form-control ValidarCaracteres" } })
                    <label class="text-danger" id="Validation_PorcentajeColaboradores" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Porcentaje Colaborador requerido.</label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.tddu_PorcentajeEmpresa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tddu_PorcentajeEmpresa, new { htmlAttributes = new { @class = "form-control ValidarCaracteres" } })
                    <label class="text-danger" id="Validation_PorcentajeEmpresa" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Porcentaje Empresa requerido.</label>
                </div>
            </div>
        </div>
    </div>
        <div class="modal-footer">
            @*data-dismiss="modal"*@
            <input type="submit" class="btn btn-primary pull-left" id="btnEditarTecho" value="Actualizar">

            @*<button type="button" class="btn btn-primary" id="btnEditarTecho">Aceptar</button>*@
            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" id="btnInactivarTechoDeducciones">Inhabilitar</button>
            <button type="button" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
        </div>
        }
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarTechosDeducciones" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.tddu_IdTechosDeducciones)
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
