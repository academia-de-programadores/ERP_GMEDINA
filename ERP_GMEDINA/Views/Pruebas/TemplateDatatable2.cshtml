@model IEnumerable<ERP_Nomina.Models.tbCatalogoDeDeducciones>

@{
    ViewBag.Title = "TemplateDatatable2";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>TemplateDatatable2</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>tbCatalogoDeDeducciones</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of tbCatalogoDeDeducciones</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a></li>
                            <li><a href="#">Config option 2</a></li>
                        </ul>
                        <a class="close-link"><i class="fa fa-times">
                            </i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_DescripcionDeduccion)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_PorcentajeColaborador)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_PorcentajeEmpresa)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_FechaCrea)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_FechaModifica)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_Activo)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tbUsuario1.usu_NombreUsuario)</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.tbTipoDeduccion.tde_Descripcion)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.cde_IdDeducciones">
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_DescripcionDeduccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_PorcentajeColaborador)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_PorcentajeEmpresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_FechaModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cde_Activo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario1.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbTipoDeduccion.tde_Descripcion)
                            </td>
                            <td>
                              <button type="button" class="btn btn-primary btn-xs" id="btnDetalle">Detalle</button>
                              <button type="button" class="btn btn-default btn-xs" id="btnEditar">Editar</button>
                            </td>
                        </tr>
                      }
                    </tbody>
                    <tfoot>
                        <tr role="row">
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_DescripcionDeduccion)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_PorcentajeColaborador)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_PorcentajeEmpresa)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_FechaCrea)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_FechaModifica)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.cde_Activo)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tbUsuario1.usu_NombreUsuario)</th>
                            <th  rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.tbTipoDeduccion.tde_Descripcion)</th>
                            <th></th>
                        </tr>
                    </tfoot>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
  <script type="text/javascript">
      $(document).ready(function () {
          $('.dataTables-example').DataTable({
              "language": {"url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"},
			  responsive: true,
              pageLength: 10,
              dom: '<"html5buttons"B>lTfgitp',
              buttons: [
                  { extend: 'copy' },
                  { extend: 'csv' },
                  { extend: 'excel', title: 'ExampleFile' },
                  { extend: 'pdf', title: 'ExampleFile' },

                  {
                      extend: 'print',
                      customize: function (win) {
                          $(win.document.body).addClass('white-bg');
                          $(win.document.body).css('font-size', '10px');

                          $(win.document.body).find('table')
                                  .addClass('compact')
                                  .css('font-size', 'inherit');
                      }
                  }
              ]
          });
      });
  </script>
}
