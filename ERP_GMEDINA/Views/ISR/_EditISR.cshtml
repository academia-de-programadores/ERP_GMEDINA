@model ERP_GMEDINA.Models.tbISR

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditISR" }))
{
    <div class="modal-body" id="Editar">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.isr_Id)
            @Html.HiddenFor(model => model.isr_FechaCrea)
            @Html.HiddenFor(model => model.isr_UsuarioCrea)

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.isr_RangoInicial, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoISR">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.isr_RangoInicial, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.isr_RangoInicial, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.isr_RangoFinal, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoISR">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.isr_RangoFinal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.isr_RangoFinal, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>            

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.tde_IdTipoDedu, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoISR">*</label>
                </div>
                <div class="col-md-8">
                    <select id="tde_IdTipoDedu" name="tde_IdTipoDedu" class="form-control"></select>
                    @Html.ValidationMessageFor(model => model.tde_IdTipoDedu, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.isr_Porcentaje, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoISR">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.isr_Porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.isr_Porcentaje, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" value="Cerrar" id="btnCerrarEditar" class="btn btn-default pull-right" />
        <input type="submit" value="Actualizar" id="btnEditarISR" class="btn btn-primary pull-left" />
        <input type="button" value="Inactivar" id="btnModalInactivarISR" class="btn btn-danger pull-left" />
    </div>
}



@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarISR" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.isr_Id)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
