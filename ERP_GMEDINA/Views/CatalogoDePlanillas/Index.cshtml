@model IEnumerable<ERP_GMEDINA.Models.tbCatalogoDePlanillas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Planillas</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Planilla", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="tblCatalogoPlanillas">
                        <thead>
                            <tr>
                                <th class="no-sort" style="background: white"></th>
                                <th>Número</th>
                                <th>Descripción</th>
                                <th>Frecuencia en días</th>
                                <th>Recibe Comisión</th>
                                <th>Estado</th>
                                <th style="background: white">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5">
                                    <div class="sk-spinner sk-spinner-wave">
                                        <div class="sk-rect1"></div>
                                        <div class="sk-rect2"></div>
                                        <div class="sk-rect3"></div>
                                        <div class="sk-rect4"></div>
                                        <div class="sk-rect5"></div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="frmActivarCatalogoPlanilla" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Activar</h4>
            </div>
            <div class="modal-body" id="Activar">
                ¿Desea Activar este registro?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary " id="btnActivarCatatalogoPlanilla">Si</button>
                <div class="btn" style="display:none;" id="cargandoActivar">
                </div>
                <button type="button" class="btn btn-white" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalConfirmacionActivar" tabindex="-1" role="dialog" aria-hidden="false">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
				<h4 class="modal-title">Activar</h4>
			</div>
			<div class="modal-body" id="Activar">
				¿Esta seguro que desea Activar este registro?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
				<input type="button" id="btnConfirmacionActivar" value="Si" class="btn btn-primary " />
				<div style="display:none" class="btn" id="cargandoEditar">
				</div>
			</div>
		</div>
	</div>
</div>
@section Styles {

    @Styles.Render("~/Content/app/General")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTablesSelvin")
    @Scripts.Render("~/Scripts/app/general/CatalogoPlanillas")
}
