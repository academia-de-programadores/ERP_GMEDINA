@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_DecimoTercerMes_RPT

@{
	ViewBag.Title = "Reportes decimo tercer mes";
	Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
@using (Html.BeginForm("DecimoTercerParametros", "ReportesPlanilla", FormMethod.Post, new { id = "frmReportDeduccionesPreview" }))
{

	<div class="row">
		<div class="col-lg-12">
			<div class="float-e-margins">
				<div class="ibox-title">
					<h5>Reportes de Decimotercer Mes</h5>
					<div class="ibox-tools">
					</div>
				</div>
				<div class="ibox-content">
					<div class="form-horizontal">
						<div class="form-group">

							<div class="col-md-6">
								<label class="font-normal">Planilla</label>

								@Html.DropDownList("cpla_IdPlanilla", (IEnumerable<SelectListItem>)ViewBag.Planillas, "Seleccione una opción", new { @class = "form-control" })

								@Html.ValidationMessageFor(model => model.cpla_IdPlanilla, "", new { @class = "text-danger" })
							</div>
							
							<div class="col-md-6">
								<label class="font-normal">Fecha Pago</label>
								<div class="input-group date">
									<span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.dtm_FechaPago, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "dtm_FechaPago", @id = "dtm_FechaPago" } })
								</div>
								@Html.ValidationMessageFor(model => model.dtm_FechaPago, "", new { @class = "text-danger" })
							</div>							
							
						</div>						

						<button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<br />

@{
	string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
	<div class="col-lg-12">
		<div class="float-e-margins">
			<div class="ibox-title">
				<h5>Previsualización de reporte</h5>
				<div class="ibox-tools">
				</div>
			</div>
			<div class="ibox-content">
				@{
					if (ViewBag.ReportViewer != null)
					{
						@Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
					}
				}
			</div>
		</div>
	</div>
</div>


