@model ERP_GMEDINA.Models.V_GeneralTotales_RPT

@using (Html.BeginForm("GeneralTotalesParametrosRPT", "ReportesPlanilla"))
{
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(model => model.hipa_FechaPago, htmlAttributes: new { @class = "font-noraml" }) <br />
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.hipa_FechaPago, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "hipa_FechaPago", @id = "hipa_FechaPago" } })
            </div>
            @Html.ValidationMessageFor(model => model.hipa_FechaPago, "", new { @class = "text-danger", @id = "Validation_descipcion" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cpla_DescripcionPlanilla, htmlAttributes: new { @class = "font-noraml" }) <br />

            @Html.DropDownList("cpla_DescripcionPlanilla", (IEnumerable<SelectListItem>)ViewBag.TipoPlanillaDDL, "Seleccione", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.cpla_DescripcionPlanilla, "", new { @class = "text-danger", @id = "Validation_descipcion2" })
        </div>

        <input type="hidden" value="pdf" name="id" />


        <div class="modal-footer">
            <button type="button" class="btn btn-white" id="btnCerrarModalRPT">Cerrar</button>
            <button type="submit" class="btn btn-primary" id="btnEnviarParametros">Aceptar</button>
        </div>

    </div>
}