@model IEnumerable<ERP_GMEDINA.Models.V_HistorialEmpleadosLiquidados>

@{
    ViewBag.Title = "Empleados Liquidados";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reporte de Liquidación de Empleados</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" id="btnAgregarCatalogoDeducciones">Registrar Deduccion</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblLiquidaciones" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.hdli_Id)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.per_Identidad)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 160px;">@Html.DisplayNameFor(model => model.per_Nombres)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 160px;">@Html.DisplayNameFor(model => model.moli_Descripcion)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 140px;">@Html.DisplayNameFor(model => model.hdli_SalarioOrdinarioMensual_Liq)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.hdli_MontoTotalLiquidacion)</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyDeducciones">
                            @foreach (var item in Model)
                            {
                                var NombreCompleto = item.per_Nombres + " " + item.per_Apellidos;
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hdli_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.per_Identidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.moli_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hdli_SalarioOrdinarioMensual_Liq)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hdli_MontoTotalLiquidacion)
                                    </td>
                                    <td>
                                        <button data-id="@item.hdli_Id" type="button" class="btn btn-primary btn-xs" id="btnImprimirLiquidacion">Imprimir</button>
                                        <button data-id="@item.hdli_Id" type="button" class="btn btn-default btn-xs" id="btnEditarCatalogoDeducciones">Detalles</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalImprimirLiquidacion" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Reporte de Liquidación</h4>
            </div>
            <div class="modal-body" id="Detalles">
                <p>Esta seguro que quiere imprimir este reporte de liquidación?</p>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Si" class="btn btn-primary" />
                <input type="button" value="No" id="ImprimirCerrar" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/LiquidacionesRPT.js")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
