@model IEnumerable<ERP_GMEDINA.Models.V_GeneralTotales_RPT>
@{
    ViewBag.Title = "Reporteria";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="modal fade" id="GeneralTotalesModalRPT" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="IconCerrar"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Ingrese Parametros</h4>
            </div>
            @Html.Partial("_GeneralTotalesModalRPT", new ERP_GMEDINA.Models.V_GeneralTotales_RPT())
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>General Totales</h5>
                    <div class="ibox-tools" id="boxTools">
						<button class="btn btn-primary btn-sm" id="ParametrosGeneralTotalesRPT">Generar Reporte</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblGeneralTotalesRPT" class="table table-striped table-bordered table-hover dataTables-example rpt">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.hipa_FechaPago)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cpla_DescripcionPlanilla)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_TotalISR)</th>

                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_TotalAFP)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_TotalIHSS)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_TotalRAP)</th>

                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_TotalINFOP)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cde_OtrasDeducciones)</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyGeneralTotalesRPT">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hipa_FechaPago)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cpla_DescripcionPlanilla)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_TotalISR)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_TotalAFP)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_TotalIHSS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_TotalRAP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_TotalINFOP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cde_OtrasDeducciones)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTablesRPT")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/GeneralTotalesRPT.js")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")

}

