@model IEnumerable<ERP_GMEDINA.Models.V_InstitucionesFinancieras_RPT>
@{
    ViewBag.Title = "InstitucionesFinancierasIndexRPT";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="modal fade" id="InstitucionesFinancierasModalRPT" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="IconCerrar"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Ingrese Parametros</h4>
            </div>
            @Html.Partial("_InstitucionesFinancierasModalRPT", new ERP_GMEDINA.Models.V_InstitucionesFinancieras_RPT())
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Instituciones Financieras</h5>
                    <div class="ibox-tools" id="boxTools">
                        <button class="btn btn-primary btn-sm" id="ParametrosInstitucionesFinancierasRPT">Reporte Especifico</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblInstitucionesFinancierasRPT" class="table table-striped table-bordered table-hover dataTables-example rpt">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.per_Identidad)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.per_Nombres)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.per_Apellidos)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.depto_descripcion)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.area_Descripcion)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.cpla_DescripcionPlanilla)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.insf_DescInstitucionFinanc)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.hidp_Total)</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 128px;">@Html.DisplayNameFor(model => model.hipa_FechaPago)</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyInstitucionesFinancierasRPT">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.per_Identidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.per_Nombres)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.per_Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.depto_descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.area_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cpla_DescripcionPlanilla)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.insf_DescInstitucionFinanc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hidp_Total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.hipa_FechaPago)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/plugins/dataTablesRPT")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/InstitucionesFinancierasRPT.js")
}

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}



