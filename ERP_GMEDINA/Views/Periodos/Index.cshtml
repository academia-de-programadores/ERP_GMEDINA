@model IEnumerable<ERP_GMEDINA.Models.tbPeriodos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Periodos</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Periodos</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary pull-right btn-xs" id="btnAgregarPeriodo">Nuevo</button>
                    </div>
                </div>
                <div class="ibox-content">
                  <table id="tblPeriodo" class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.peri_DescripPeriodo)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyPeriodo">
                      @foreach (var item in Model)
                      {
                          var UsuarioModifica = !(item.peri_UsuarioModifica > 0) ? "Sin modificaciones" : item.tbUsuario1.usu_Nombres + " " + item.tbUsuario1.usu_Apellidos;
                          var UsuarioCrea = !(item.peri_UsuarioCrea > 0) ? "Sin modificaciones" : item.tbUsuario.usu_NombreUsuario;
                          var FechaCrea = Convert.ToString(item.peri_FechaCrea) == string.Empty ? "Sin modificaciones" : Convert.ToString(item.peri_FechaCrea);
                          var FechaModifica = Convert.ToString(item.peri_FechaModifica) == string.Empty ? "Sin modificaciones" : Convert.ToString(item.peri_FechaModifica);
                        <tr class="gradeA odd" role="row" data-id="@item.peri_IdPeriodo">
                            <td>
                                @Html.DisplayFor(modelItem => item.peri_DescripPeriodo)
                            </td>
                            <td>
                                <button data-id="@item.peri_IdPeriodo" type="button" class="btn btn-primary btn-xs" id="btnDetallePeriodo">Detalle</button>
                                <button data-id="@item.peri_IdPeriodo" type="button" class="btn btn-default btn-xs" id="btnEditarPeriodo">Editar</button>
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
<div class="modal fade" id="CrearPeriodo" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="IconCerrarCrear" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Agregar datos</h4>
            </div>
            @Html.Partial("_Create", new ERP_GMEDINA.Models.tbPeriodos())
        </div>
    </div>
</div>

<div class="modal fade" id="EditarPeriodo" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="IconCerrarEditar" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Editar</h4>
            </div>
            @Html.Partial("_Edit", new ERP_GMEDINA.Models.tbPeriodos())
        </div>
    </div>
</div>

<div class="modal fade" id="InactivarPeriodo" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="IconCerrar" class="close" data-dismiss="modal"><span aria-hidden="false">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Inhabilitar el registro</h4>
            </div>
            <div class="modal-body" id="Inactivar">
                <p><b>¿Esta Seguro Que Desea Inhabilitar el registro?</b></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" id="btnCerrar" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" id="btnInactivarPeriodoConfirmar">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DetallarPeriodo" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="IconCerrarEditar" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Detalle</h4>
            </div>
            @Html.Partial("_Details", new ERP_GMEDINA.Models.tbPeriodos())
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Scripts.Render("~/plugins/izitoast")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/General/Period")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
