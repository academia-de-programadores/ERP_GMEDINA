@model ERP_GMEDINA.Models.tbPeriodos

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreatePeriodo" }))
        {
            <div class="modal-body" id="Crear">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.peri_UsuarioCrea)
                    @Html.HiddenFor(model => model.peri_FechaCrea)
                    <div class="form-group">
                        @Html.LabelFor(model => model.peri_DescripPeriodo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.peri_DescripPeriodo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.peri_DescripPeriodo, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" value="Cancelar" id="btnCerrarCrear" class="btn btn-default" />
                <input type="submit" value="Guardar" id="btnCrearPeriodoConfirmar" class="btn btn-primary" />
            </div>
        }
