@model ERP_GMEDINA.Models.tbPeriodos
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditPeriodo" }))
{
    <div class="ibox-content">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.peri_IdPeriodo)
                        @Html.LabelFor(model => model.peri_IdPeriodo, htmlAttributes: new { @class = "control-label col-md-2", @disabled = "disabled" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.peri_IdPeriodo, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled"} })
                    </div>    
                </div>
            </div> 
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.peri_DescripPeriodo)
                        @Html.LabelFor(model => model.peri_DescripPeriodo, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.peri_DescripPeriodo, new { htmlAttributes = new { @class = "text-box single-line" } })
                    </div>
                </div>
            </div> 
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" value="Cerrar" id="btnCerrarEditar" class="btn btn-default" />
        <input type="submit" value="Actualizar" id="btnUpdatePeriodo" class="btn btn-primary pull-left" />
        <input type="button" value="Inhabilitar" id="btnInactivarPeriodo" class="btn btn-danger pull-left" />
    </div>
}

