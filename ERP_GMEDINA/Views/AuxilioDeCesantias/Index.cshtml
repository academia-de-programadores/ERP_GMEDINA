@model IEnumerable<ERP_GMEDINA.Models.tbAuxilioDeCesantias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbAuxilioDeCesantias</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tbAuxilioDeCesantias</h5>
                    <div class="ibox-tools">
                       @*@Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary btn-xs"})*@
                        <input type="button" value="Nuevo" name="btnModalCrear" id="btnModalCrear" class="btn btn-primary btn-xs"/>
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>Codigo</th>
                            <th>Rando Inicio (Meses)</th>
                            <th>Rango Final (Meses)</th>
                            <th>Auxilio Cesantia (Dias)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.aces_IdAuxilioCesantia">
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_IdAuxilioCesantia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_RangoInicioMeses)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_RangoFinMeses)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_DiasAuxilioCesantia)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.aces_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_FechaModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aces_Activo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario1.usu_NombreUsuario)
                            </td>*@
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.aces_IdAuxilioCesantia },  new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.aces_IdAuxilioCesantia }, new {@class = "btn btn-default btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>


<div class="modal fade" id="frmCrearAuxCes" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="IconCerrar"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Nuevo Registro Auxilio Cesantia</h4>
            </div>

            @Html.Partial("_Create", new ERP_GMEDINA.Models.tbAuxilioDeCesantias())

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/izitoast")
    @Scripts.Render("~/Scripts/app/general/AuxilioCesantia.js")
}
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}
