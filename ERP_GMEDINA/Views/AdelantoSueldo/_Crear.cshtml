@model ERP_GMEDINA.Models.tbAdelantoSueldo

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoAdelantos" }))
{
    <div class="modal-body" id="Crear">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

            <div class="form-group">
                @Html.LabelFor(model => model.emp_Id, "Colaborador", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="emp_IdEmpleado" name="emp_Id" class="form-control"></select>
                    @*@Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger" })*@
                    <label class="text-danger" id="Validation_descripcion1" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo colaborador es obligatorio.</label>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_RazonAdelanto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                        @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @autocomplete = "off"} })
                        <label class="text-danger" id="Validation_descripcion2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo razón es obligatorio.</label>
                        @*@Html.ValidationMessageFor(model => model.adsu_RazonAdelanto, "", new { @class = "text-danger", @id = "Validation_descripcion1" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "form-control", @type = "number", @autocomplete = "off"} })
                    @*@Html.ValidationMessageFor(model => model.adsu_Monto, "", new { @class = "text-danger", @id = "Validation_descripcion2" })*@
                    <label class="text-danger" id="Validation_descripcion3" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo monto es obligatorio.</label>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_FechaAdelanto, htmlAttributes: new { @class = "control-label col-md-2" }) <br />
                <div class="input-group date">
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    @Html.EditorFor(model => model.adsu_FechaAdelanto, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "adsu_FechaAdelanto", @id = "adsu_FechaAdelanto" } })
                    <label class="text-danger" id="Validation_descripcion4" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo fecha es obligatorio.</label>
                </div>
                    @*@Html.ValidationMessageFor(model => model.adsu_FechaAdelanto, "", new { @class = "text-danger", @id = "Validation_descripcion3" })*@
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroAdelantos">Guardar</button>
        <button type="button" class="btn btn-white" id="btnCerrarCreate">Cerrar</button>        
    </div>
}
