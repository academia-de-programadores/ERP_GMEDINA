@model ERP_GMEDINA.Models.tbAdelantoSueldo

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoAdelantos" }))
{
    <div class="modal-body" id="Crear">
        @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    Colaborador<label class="" id="AsteriscoColaborador" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    <select id="emp_IdEmpleado" name="emp_Id" class="form-control" onchange = "ValidarCamposCrear('-1', '-1', this.value, '-1')"></select>
                    <label class="text-danger" id="Span_emp_Id" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Colaborador requerido</label>
                </div>
                <div class="col-md-6">
                    Razón<label class="" id="AsteriscoRazon" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "col-md-9", @name = "adsu_RazonAdelanto", @id = "adsu_RazonAdelanto", @autocomplete = "off", onkeyup = "ValidarCamposCrear(this.value, '-1', '-1', '-1')" } })
                    <div><label class="text-danger" id="adsu_RazonAdelantoValidacion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Razón requerido</label></div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    Monto<label class="" id="AsteriscoMonto" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "col-md-9 MascaraCantidad soloNumero", @name = "adsu_Monto", @id = "adsu_Monto", @disabled = "disabled", @autocomplete = "off", onkeyup = "ValidarCamposCrear('-1', this.value, '-1', '-1')" } })
                    @*<div>@Html.ValidationMessageFor(model => model.adsu_Monto, "", new { @class = "text-danger", @id = "Validation_descripcion3" })</div>*@
                    <label class="text-danger" id="adsu_MontoValidacion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Monto requerido</label>
                    <label class="text-danger" id="adsu_MontoValidacion2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo Monto debe ser mayor que cero</label>
                    <span class="field-validation-valid text-danger" style="display: none" id="SueldoPromedioCrear"></span>
                </div>
                <div class="col-md-6">
                    Fecha Adelanto<label class="" id="AsteriscoFecha" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    <div class="input-group date">
                        <span class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </span>
                        @Html.EditorFor(model => model.adsu_FechaAdelanto, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "adsu_FechaAdelanto", @id = "adsu_FechaAdelanto", onchange = "ValidarCamposCrear('-1', '-1', '-1', this.value)" } })
                    </div>
                    <div>
                    <label class="text-danger" id="Validation_adsu_FechaAdelanto" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Fecha requerido</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary pull-left" id="btnCreateRegistroAdelantos">Guardar</button>
        <button type="button" class="btn btn-white" data-dismiss="modal" id="btnCerrarCrearAdelanto">Cerrar</button>        
    </div>
}
