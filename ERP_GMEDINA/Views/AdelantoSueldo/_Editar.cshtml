@model ERP_GMEDINA.Models.tbAdelantoSueldo
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAdelantosEdit" }))
{
    <div class="modal-body" id="Editar">
        @Html.AntiForgeryToken()
        @*<div class="ibox-content">
            <div class="form-horizontal">*@
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.adsu_IdAdelantoSueldo, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.adsu_IdAdelantoSueldo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @autocomplete = "off" } })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label for="emp_Id" htmlattributes="{ class = text-box single-line, disabled = disabled }">Colaborador</label><label class="" id="AsteriscoColaborador" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    </div>
                    <div class="col-md-8">
                        <select class="form-control lg" name="emp_Id" id="emp_Id" onchange="ValidarCamposEditar(this.value, '-1', '-1')">
                            <option></option>
                        </select>
                        <span class="field-validation-valid text-danger" style="display: none;" id="Span_emp_Id">Campo Colaborador requerido</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })<label class="" id="RazonAsterisco" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "text-box single-line", @autocomplete = "off", onkeyup = "ValidarCamposEditar('-1', this.value, '-1')", maxlength = 50 } })
                        <span class="field-validation-valid text-danger" style="display: none;" id="adsu_RazonAdelantoValidacion">Campo Razón requerido</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled", maxlength = 18 } })
                        <label id="MontoAsterisco">*</label>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "form-control MascaraCantidad soloNumero", @autocomplete = "off", onkeyup = "ValidarCamposEditar('-1', '-1', this.value)" } })
                        <span class="field-validation-valid text-danger" style="display: none;" id="adsu_MontoValidacion">Campo Monto requerido</span>
                        <span class="field-validation-valid text-danger" style="display: none;" id="adsu_MontoValidacion2">El campo Monto debe ser mayor que cero</span>
                        <span class="field-validation-valid text-danger" style="display: none;" id="SueldoPromedioEditar"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
            @*</div>
                </div>*@

            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" id="btnUpdateAdelantos">Actualizar</button>
                <button type="button" class="btn btn-danger pull-left" id="btnmodalInactivarAdelantoSueldo">Inactivar</button>
                <button type="button" class="btn btn-white" id="btnCerrarEditar">Cerrar</button>
            </div>
}
