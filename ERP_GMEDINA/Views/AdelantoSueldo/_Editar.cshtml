@model ERP_GMEDINA.Models.tbAdelantoSueldo
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAdelantosEdit" }))
{
    <div class="modal-body" id="Editar">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

            <div class="form-group">
                @Html.LabelFor(model => model.emp_Id, "Colaborador", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="emp_Id" name="emp_Id" class="form-control"></select>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_RazonAdelanto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="field-validation-valid text-danger" style="display: none" id="adsu_RazonAdelantoValidacion">El campo adelanto de sueldo es obligatorio</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                    <span class="field-validation-valid text-danger" style="display: none" id="adsu_MontoValidacion">El campo monto es obligatorio</span>
                </div>
            </div>

            @* VArIABLE PARA INABILITAR EL BOTON DE ACUALIZAR *@
            <div id = "inactivar" class="modal-footer" hidden>
                <button type="button" class="btn btn-primary pull-left" id="btnUpdateAdelantos">Actualizar</button>
                <button type="button" class="btn btn-danger pull-left" id="btnmodalInactivarAdelantoSueldo">Inhabilitar</button>
                <button type="button" class="btn btn-white" id="btnCerrarEditar">Cerrar</button>
            </div>

            <div id="activar" class="modal-footer" hidden>
                <button type="button" class="btn btn-primary pull-left" disabled title="Debe habilitar el registro para editar" id="btnUpdateAdelantos">Actualizar</button>
                <button type="button" class="btn btn-primary pull-left" id="btnActivarAdelantoSueldo">Habilitar</button>
                <button type="button" class="btn btn-white" id="btnCerrarEditar2">Cerrar</button>
            </div>

            
            <div id="padre"></div>
        </div>
    </div>
}
