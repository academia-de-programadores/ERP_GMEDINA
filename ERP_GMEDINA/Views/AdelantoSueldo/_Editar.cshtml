@model ERP_GMEDINA.Models.tbAdelantoSueldo
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAdelantosEdit" }))
{
    <div class="modal-body" id="Editar">
        @Html.AntiForgeryToken()
        @*<div class="ibox-content">
            <div class="form-horizontal">*@
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

                  
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="emp_Id" htmlattributes="{ class = text-box single-line, disabled = disabled }">Colaborador</label>
                            </div>
                            <div class="col-md-6">
                                <select id="emp_Id" name="emp_Id" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })<label class="text-danger" id="RazonAsterisco" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @class = "text-box single-line", @autocomplete = "off" } })
                                <span class="field-validation-valid text-danger" style="display: none" id="adsu_RazonAdelantoValidacion">Campo razón requerido</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })<label class="text-danger" id="MontoAsterisco" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "form-control", @type = "number", @autocomplete = "off" } })
                                <span class="field-validation-valid text-danger" style="display: none" id="adsu_MontoValidacion">Campo monto requerido</span>
                                <span class="field-validation-valid text-danger" style="display: none" id="adsu_MontoValidacion2">El campo monto debe ser mayor que cero</span>
                                <span class="field-validation-valid text-danger" style="display: none" id="SueldoPromedio"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*</div>
    </div>*@

    <div class="modal-footer">
        <button type="button" class="btn btn-primary pull-left" id="btnUpdateAdelantos">Actualizar</button>
        <button type="button" class="btn btn-danger pull-left" id="btnmodalInactivarAdelantoSueldo">Inactivar</button>
        <button type="button" class="btn btn-white" id="btnCerrarEditar">Cerrar</button>
    </div>
}
