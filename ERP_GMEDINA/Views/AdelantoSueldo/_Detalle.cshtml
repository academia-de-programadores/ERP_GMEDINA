@model ERP_GMEDINA.Models.tbAdelantoSueldo

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoBonosDetalle" }))
{
    <div class="modal-body" id="Detalles">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.adsu_IdAdelantoSueldo)

            <div class="form-group">
                @Html.LabelFor(model => model.emp_Id, "Colaborador", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="emp_IdEmpleado" name="emp_Id" class="form-control" disabled></select>
                    @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_RazonAdelanto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.adsu_RazonAdelanto, new { htmlAttributes = new { @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.adsu_RazonAdelanto, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adsu_Monto, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.adsu_Monto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.adsu_FechaAdelanto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.adsu_FechaAdelanto, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.adsu_FechaAdelanto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Auditoría</h2>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <table class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Creado</td>
                                    <td>@Html.EditorFor(model => model.adsu_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                    <td>@Html.EditorFor(model => model.adsu_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                </tr>
                                <tr>
                                    <td>Modificado</td>
                                    <td>@Html.EditorFor(model => model.adsu_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                    <td>@Html.EditorFor(model => model.adsu_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="footer">
                        <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
