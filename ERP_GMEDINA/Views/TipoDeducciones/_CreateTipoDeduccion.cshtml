@model ERP_GMEDINA.Models.tbTipoDeduccion

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTipoDeduccionCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body" id="Crear">
        <!--  DISEÑO NUEVO -->
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.tde_IdTipoDedu)
            @Html.HiddenFor(model => model.tde_UsuarioCrea)
            @Html.HiddenFor(model => model.tde_FechaCrea)
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.tde_Descripcion, htmlAttributes: new { @class = "" })
                    <label class="" id="AsteriscoDescripcion" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                    
                    @Html.EditorFor(model => model.tde_Descripcion, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @maxlength = "100" } })
                    <span class="text-danger" id="validation_DescripcionRequerida" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo es requerido</span>
                    <span class="text-danger" id="validation_DescripcionNumerico" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo no admite datos numérico</span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white" id="btnCerrarCrear" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroTipoDeducciones">Guardar</button>
    </div>
}



