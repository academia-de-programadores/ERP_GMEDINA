@model ERP_GMEDINA.Models.tbTipoDeduccion

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmTipoDeduccionCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body" id="Crear">
        @Html.HiddenFor(model => model.tde_IdTipoDedu)
        @Html.HiddenFor(model => model.tde_UsuarioCrea)
        @Html.HiddenFor(model => model.tde_FechaCrea)
        <!--  DISEÑO NUEVO -->
        <table class="table">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="input-group date">
                            @Html.LabelFor(model => model.tde_Descripcion, htmlAttributes: new { /*@class = "control-label col-md-2"*/ })
                            @Html.EditorFor(model => model.tde_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.tde_Descripcion, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white" id="btnCerrarCrear" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroTipoDeducciones">Guardar</button>
    </div>
}



