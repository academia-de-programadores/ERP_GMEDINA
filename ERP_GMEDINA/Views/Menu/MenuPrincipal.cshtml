@{ Layout = "~/Views/Shared/_LayoutMenu.cshtml";}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Menu Principal</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    @*<link href="@Url.Content(" ~/Scripts/plugins/jquery-ui/jqueryuiStyles")" rel="stylesheet" type="text/css" />*@
    <!-- Primary Inspinia style -->

    @Styles.Render(" ~/Scripts/plugins/jquery-ui/jqueryuiStyles")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/background")

</head>

<body>

    <div class="row border-bottom">
        <nav class="navbar navbar-fixed-top" role="navigation" id="navMenu">
            <ul class="nav navbar-top-links navbar-right" id="ulMenu">
                @{var oUsuario = HttpContext.Current.Session["UserName"];
                    string nombreUsuario = oUsuario?.ToString();
                }
                <li>
                    <a href="#">
                        Bienvenido @nombreUsuario
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("CerrarSesion", "Login" )">
                        <i class="fa fa-sign-out"></i> Cerrar sesión
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="text-center">
        <div class="wrapper">
            <div class="wrapper white-bg" id="wrapper">
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">

                        @* ------------------------- INVENTARIO  -------------------------*@
                        <div class="col-lg-6">
                            <div onclick="userModelState('Menu/ModuloInventario').status ? location.href = '@Url.Action("Index","Home",new { idmenu=3})' : ''">
                                <div class="widget navy-bg p-lg text-center animated bounceIn ">
                                    <div class="m-b-md">
                                        <i class="fa fa-book fa-4x"></i>
                                        <h3 class="m-xs"><b>INVENTARIO</b></h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                        @* ------------------------- INVENTARIO  -------------------------*@


                        @* ------------------------- FACTURACION  -------------------------*@
                        <div class="col-lg-6">
                            <a onclick="userModelState('Menu/ModuloFacturacion').status ? location.href = '@Url.Action("Main","Home")' : ''" id="btnMenuPlanilla">
                                <div class="widget navy-bg p-lg text-center animated bounceIn">
                                    <div class="m-b-md">
                                        <i class="fa fa-calculator fa-4x"></i>
                                        <h3 class="m-xs"><b>FACTURACIÓN</b></h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                        @* ------------------------- FACTURACION  -------------------------*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">
                        @* --------------------------- RRHH  --------------------------*@
                        <div class="col-lg-6">
                            <a onclick="(userModelState('Menu/ModuloRecursosHumanos')).status ? location.href = '@Url.Action("Index","Inicio")' : ''" id="btnMenuRRHH">
                                <div class="widget navy-bg p-lg text-center animated bounceIn">
                                    <div class="m-b-md">
                                        <i class="fa fa-users fa-4x"></i>
                                        <h3 class="m-xs"><b>RECURSOS HUMANOS</b></h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                        @* ---------------------------- RRHH  -------------------------*@

                        @* ------------------------- PLANILLA -------------------------*@
                        <div class="col-lg-6">
                            <a onclick="userModelState('Menu/ModuloPlanilla').status ? location.href = '@Url.Action("Index","Menu")' : ''" id="btnMenuPlanilla">
                                <div class="widget navy-bg p-lg text-center animated bounceIn">
                                    <div class="m-b-md">
                                        <i class="fa fa-money fa-4x"></i>
                                        <h3 class="m-xs"><b>PLANILLA</b></h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                        @* ------------------------- PLANILLA -------------------------*@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mainly scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Styles.Render("~/Content/plugins/izitoast/iziToast.min")
    @Scripts.Render("~/Scripts/plugins/iziToast/iziToast.min")
    @Scripts.Render("~/Scripts/app/General/Menu")
    @*@Scripts.Render("~/bundles/inspinia")*@

    <div id="flotTip" style="display: none; position: absolute; background: rgb(255, 255, 255); z-index: 100; padding: 0.4em 0.6em; border-radius: 0.5em; font-size: 0.8em; border: 1px solid rgb(17, 17, 17); white-space: nowrap; left: 389px; top: 434px;"></div>
</body>

</html>
