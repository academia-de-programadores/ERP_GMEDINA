@model ERP_GMEDINA.Models.tbAreas

@{
    ViewBag.Title = "Área";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
 <div class="row">
  <div class="col-lg-12">
   <div class="float-e-margins">
    <div class="ibox-title">
     <h5>Listado de Áreas</h5>
     <div class="ibox-tools">
      @Html.ActionLink("Registrar Área", "Create", null, new { @class = "btn btn-primary btn-xs" })
     </div>
    </div>
    <div class="ibox-content">
     <table class="table table-striped table-bordered table-hover" id="IndexTable">
      <thead>
       <tr role="row">
        <th></th>
        <th>Número</th>
        <th>@Html.DisplayNameFor(model => model.area_Descripcion)</th>
        <th>@*@Html.DisplayNameFor(model => model.tbSucursales.suc_Descripcion)*@Sucursales</th>
        <th>Encargado</th>
        <th>Empleados</th>
        <th>@Html.DisplayNameFor(model => model.area_Estado)</th>
        <th>Acciones</th>
       </tr>
      </thead>
      <tbody></tbody>
     </table>
    </div>
   </div>
  </div>
 </div>
</div>
@Html.Partial("_Activar")

@section Styles {
 @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
 @Styles.Render("~/Content/plugins/izitoast/iziToast")
 @Styles.Render("~/Content/plugins/izitoast/iziToast.min")
}

@section Scripts {
 @* datatble *@
 @Scripts.Render("~/Scripts/plugins/dataTablesMatutina/DatatablesConfigurations")
 @Scripts.Render("~/Scripts/plugins/dataTablesMatutina/datatables.min")

 @*general*@
 @Scripts.Render("~/Scripts/app/general")
 @Scripts.Render("~/Scripts/plugins/iziToast/iziToast.min")
 @Scripts.Render("~/Scripts/plugins/iziToast/iziToast")
 @Scripts.Render("~/Scripts/app/general/IndexArea")
 @if ((bool)Session["Admin"])
    {
     @Scripts.Render("~/Scripts/app/general/Admin")
 }
}
