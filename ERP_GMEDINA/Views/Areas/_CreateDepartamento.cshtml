@model ERP_GMEDINA.Models.cDepartamentos
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormDepartamentos" }))
{
    <div class="col-md-4 b-r">
     <div class="form-group">
      @Html.LabelFor(model => model.depto_Descripcion, htmlAttributes: new { @class = "control-label col-md-3" })
      <div class="col-md-10">
       @Html.EditorFor(model => model.depto_Descripcion, new { htmlAttributes = new { @class = "form-control required" } })
       @Html.ValidationMessageFor(model => model.depto_Descripcion, "", new { @class = "text-danger ", @id = "errordepto_Descripcion" })
      </div>
     </div>
     <div class="form-group">
      @Html.LabelFor(model => model.car_Descripcion, htmlAttributes: new { @class = "col-md-3" })
      <div class="col-md-10">
       @Html.EditorFor(model => model.car_Descripcion, new { htmlAttributes = new { @class = "form-control required" } })
       @Html.ValidationMessageFor(model => model.car_Descripcion, "", new { @class = "text-danger", @id = "errorcar_Descripcion" })
      </div>
     </div>
     <div class="form-group">
      @Html.LabelFor(model => model.car_SalarioMinimo, htmlAttributes: new { @class = "col-md-3" })
      <div class="col-md-10">
       @Html.EditorFor(model => model.car_SalarioMinimo, new { htmlAttributes = new { @class = "form-control required", @type = "number", @placeholder = "0.00", @step = "500.00", @min = "0", @max = "10000000", @onkeypress = "return Numericos(event)" } })
       @Html.ValidationMessageFor(model => model.car_SalarioMinimo, "", new { @class = "text-danger", @id = "errorcar_SalarioMinimo" })
      </div>
     </div>
     <div class="form-group">
      @Html.LabelFor(model => model.car_SalarioMaximo, htmlAttributes: new { @class = "col-md-3" })
      <div class="col-md-10">
       @Html.EditorFor(model => model.car_SalarioMaximo, new { htmlAttributes = new { @class = "form-control required", @type = "number", @placeholder = "0.00", @step = "500.00", @min = "0", @max = "10000000", @onkeypress = "return Numericos(event)" } })
       @Html.ValidationMessageFor(model => model.car_SalarioMaximo, "", new { @class = "text-danger", @id = "errorcar_SalarioMaximo" })
      </div>
     </div>
     <input type="button" class="btn btn-primary btn-xs" id="add" value="Agregar" />
    </div>
}
