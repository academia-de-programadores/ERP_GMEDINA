@model ERP_GMEDINA.Models.tbPreaviso

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreatePreaviso" }))
{
    <div class="modal-body" id="Crear">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.prea_UsuarioCrea)
            @Html.HiddenFor(model => model.prea_FechaCrea)
            <div class="form-group">
                @Html.LabelFor(model => model.prea_RangoInicioMeses, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prea_RangoInicioMeses, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.prea_RangoInicioMeses, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Rango de Fin de Mes</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prea_RangoFinMeses, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.prea_RangoFinMeses, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Dias Preaviso</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prea_DiasPreaviso, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.prea_DiasPreaviso, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div>
        </div>
    </div>
            <div class="modal-footer">
                <input type="button" value="Cancelar" id="btnCerrarCrear" class="btn btn-default" />
                <input type="submit" id="btnCrearPreavisoConfirmar" value="Guardar" class="btn btn-primary" />
                <div style="display:none" class="btn" id="cargandoCrear">
                </div>
            </div>}