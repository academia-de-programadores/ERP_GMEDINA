@model ERP_GMEDINA.Models.tbPreaviso

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreatePreaviso" }))
{

    <div class="modal-body" id="Crear">
        <div class="ibox-content">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.prea_UsuarioCrea)
                @Html.HiddenFor(model => model.prea_FechaCrea)

                <div class="form-group">
                    <div class="col-md-6">
                        <div class="input-group date">
                            Rango de inicio del Mes<label class="asterisco" id="AsteriscoRangoInicio">*</label>

                            @Html.EditorFor(model => model.prea_RangoInicioMeses, new { htmlAttributes = new { @class = "form-control MascaraEnteros soloNumero", @type = "text", @autocomplete = "off" } })<br />
                            <span class="text-danger" id="validation_RangoInicioMenorACero" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El rango inicio no puede ser menor a cero</span>
                            <span class="text-danger" id="validation_RangoInicioRequerido" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo es requerido</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group date">
                            Rango del Fin de Mes<label class="asterisco" id="AsteriscoRangoFinal">*</label>
                            
                            @Html.EditorFor(model => model.prea_RangoFinMeses, new { htmlAttributes = new { @class = "form-control MascaraEnteros soloNumero", @type = "text", @autocomplete = "off" } })<br />
                            <span class="text-danger" id="validation_RangoFinalMenorACero" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El rango final no puede ser menor a cero</span>
                            <span class="text-danger" id="validation_RangoFinalRequerido" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo es requerido</span>
                            <span class="text-danger" id="validation_RangoFinalMayoRangoInicio" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El rango final debe ser mayor que el rango inicial</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <div class="input-group date">
                            Días Preaviso<label class="asterisco" id="AsteriscoCantidadDia">*</label>
                            
                            @Html.EditorFor(model => model.prea_DiasPreaviso, new { htmlAttributes = new { @class = "form-control MascaraEnteros soloNumero", @type = "text", @autocomplete = "off" } })<br />
                            <span class="text-danger" id="validation_CantidadDiasMenorACero" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El rango final no puede ser menor a cero</span>
                            <span class="text-danger" id="validation_CantidadDiasRequerido" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo es requerido</span>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" value="Cerrar" id="btnCerrarCrear" class="btn btn-default" />
        <input type="submit" id="btnCrearPreavisoConfirmar" value="Guardar" class="btn btn-primary pull-left" />
    </div> 
}