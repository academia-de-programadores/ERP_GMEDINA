@model ERP_GMEDINA.Models.tbPreaviso

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmDetailsPeriodo" }))
{
    <div class="ibox-content" style="border-top-color: #fff">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.prea_IdPreaviso)

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.prea_IdPreaviso, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="prea_IdPreaviso">@Html.DisplayFor(model => model.prea_IdPreaviso, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.prea_RangoInicioMeses, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="prea_RangoInicioMeses">@Html.DisplayFor(model => model.prea_RangoInicioMeses, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.prea_RangoFinMeses, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="prea_RangoFinMeses">@Html.DisplayFor(model => model.prea_RangoFinMeses, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.prea_DiasPreaviso, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="prea_DiasPreaviso">@Html.DisplayFor(model => model.prea_DiasPreaviso, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })</span>
                </div>
            </div>
        </div>

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h4>Auditoría</h4>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <table class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th>Acción</th>
                                <th>Usuario</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Creado</td>
                                @Html.HiddenFor(model => model.prea_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario_usu_NombreUsuario">@Html.EditorFor(model => model.tbUsuario.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="prea_FechaCrea">@Html.EditorFor(model => model.prea_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                            <tr>
                                <td>Modificado</td>
                                @Html.HiddenFor(model => model.prea_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario1_usu_NombreUsuario">@Html.EditorFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="prea_FechaModifica">@Html.EditorFor(model => model.prea_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="footer">
                    <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>

    </div>
}

