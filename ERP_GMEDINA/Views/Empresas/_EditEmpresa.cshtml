@model ERP_GMEDINA.Models.tbEmpresas
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "fmrEmpresasEdit" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.empr_Id)
        @Html.HiddenFor(model => model.empr_UsuarioCrea)
        @Html.HiddenFor(model => model.empr_FechaCrea)

        <div class="form-group">
            @Html.LabelFor(model => model.empr_Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.empr_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.empr_Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.empr_RazonInactivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.empr_RazonInactivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.empr_RazonInactivo, "", new { @class = "text-danger" })                
            </div>
        </div>
        
    </div>
}

