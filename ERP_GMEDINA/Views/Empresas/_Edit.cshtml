@model ERP_GMEDINA.Models.tbEmpresas
<div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true" data-res="false">
 <div class="modal-dialog">
  <div class="modal-content animated fadeIn">
   <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Editar Empresa</h4>
   </div>
   <div class="modal-body">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormEditar" }))
    {
        <div class="form-horizontal">
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
         <div class="form-group">
          @Html.LabelFor(model => model.empr_Nombre, htmlAttributes: new { @class = "control-label col-md-3" })
          <div class="col-md-8">
           @Html.EditorFor(model => model.empr_Nombre, new { htmlAttributes = new { @class = "form-control required valid" } })
           @Html.ValidationMessageFor(model => model.empr_Nombre, "", new { @class = "text-danger", @id = "errorempr_Nombre" })
          </div>
         </div>
         <div class="form-group">
          @Html.LabelFor(model => model.empr_Logo, htmlAttributes: new { @class = "control-label col-md-3" })
          <div class="col-md-8">
           <div>
            <label title="Upload image file" for="UPempr_Logo" class="btn btn-primary">
             Subir imagen
             <input type="file" name="UPempr_Logo" accept=".png,.jpeg,.jpg" id="UPempr_Logo" style="display:none" />
            </label>
            <div>
             <h4>Previsualizacion</h4>
             <div class="img-preview img-preview-sm" style="width: 200px; height: 100px;"><img id="img2" style="display: block;height: 100px ; "></div>

            </div>
           </div>
          </div>
         </div>
        </div>
    }
   </div>
   <div class="modal-footer">
    <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
    <button type="button" class="btn btn-primary pull-left" id="btnActualizar">Editar</button>
    <button type="button" class="btn btn-danger pull-left" id="btnInactivar">Inactivar</button>
   </div>
  </div>
 </div>
</div>

