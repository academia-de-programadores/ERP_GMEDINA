@model ERP_GMEDINA.Models.tbFormaPago
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmDetailsFormaPago" }))
{
    <div class="ibox-content">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.fpa_IdFormaPago)

            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.fpa_IdFormaPago, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="peri_IdPeriodo">@Html.DisplayFor(model => model.fpa_IdFormaPago, new { htmlAttributes = new { @class = "text-box single-line", disabled = "disabled" } })</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.fpa_Descripcion, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="peri_DescripPeriodo">@Html.DisplayFor(model => model.fpa_Descripcion, new { htmlAttributes = new { @class = "text-box single-line", disabled = "disabled" } })</span>
                </div>
            </div>

        </div>

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h4>Auditoría</h4>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <table class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th>Acción</th>
                                <th>Usuario</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Creado</td>
                                @Html.HiddenFor(model => model.fpa_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="fpa_FechaCrea">@Html.DisplayFor(model => model.fpa_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                            <tr>
                                <td>Modificado</td>
                                @Html.HiddenFor(model => model.fpa_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario1_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="fpa_FechaModifica">@Html.DisplayFor(model => model.fpa_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
