@model ERP_GMEDINA.Models.tbFormaPago

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreateFormaPago" }))
        {
            <div class="modal-body" id="Crear">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.fpa_UsuarioCrea)
                    @Html.HiddenFor(model => model.fpa_FechaCrea)
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.fpa_Descripcion, htmlAttributes: new { @class = "control-label"})
                            <label class="" id="AsteriscoDescripcion" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.fpa_Descripcion, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @maxlength = "100" } })
                            <span class="text-danger" id="validation_DescripcionRequerida" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo es requerido</span>
                            <span class="text-danger" id="validation_DescripcionNumerico" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Este campo no admite datos numérico</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" value="Cerrar" id="btnCerrarCrear" class="btn btn-default pull-right" />
                <input type="submit" value="Guardar" id="btnCrearFormaPago" class="btn btn-primary pull-left" />
            </div>
        }
