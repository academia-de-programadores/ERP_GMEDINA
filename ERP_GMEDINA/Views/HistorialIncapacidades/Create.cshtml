@model ERP_GMEDINA.Models.tbHistorialIncapacidades

@{
    ViewBag.Title = "Crear Incapacidad";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
            <a href="Index" class="btn btn-default pull-right">Regresar</a>
        	
        	<h2>Crear Incapacidad</h2>
        </div>


       @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormNuevo" }))
       {
          <div id="MeterId" class="ibox-content">
            @Html.AntiForgeryToken()
              <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                  <div  class="form-group">
                          <div align="right" class="col-md-9">
                              <div align="left" class="col-md-9">
                                  <div class="ibox">
                                      <div class="ibox-title">
                                          <h5>Datos del empleado</h5>
                                      </div>

                                      <div id="llamardata" class="ibox-content">
                                          <h4 class="col-md-2">Empleado</h4>
                                          <h4 id="nombre" name="nombre" class="col-md-5"></h4>
                                          <br>
                                      </div>

                                      <div id="llamardataa" class="ibox-content">
                                          <h4 class="col-md-2">Identidad</h4>
                                          <h4 id="identidad" name="identidad" class="col-md-4"></h4>

                                      </div>
                                      

                                  </div>
                              </div>
                          </div>
                      
                        
                      </div>

                  <div id="MeterId" hidden="hidden" class="col-md-8">
                      @Html.EditorFor(model => model.emp_Id, new { htmlAttributes = new { @class = "form-control ", @id = "emp_idd" } })
                      @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger" })


                  </div>
                          
                  <div class="form-group">
                    
         
                          @Html.LabelFor(model => model.ticn_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-10">
                              @Html.DropDownListFor(model => model.ticn_Id, null,"**Seleccione una opción**",  htmlAttributes: new { @class = "form-control  required valid", @id= "ticn_Id" })
                              @Html.ValidationMessageFor(model => model.ticn_Id, "", new { @class = "text-danger", @id = "errorticn_Id" })
                          </div>
                      </div>
                 
                      

                      <div class="form-group">
                          @Html.LabelFor(model => model.hinc_CentroMedico, "Centro Médico", htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-10">
                              @Html.EditorFor(model => model.hinc_CentroMedico, new { htmlAttributes = new { @class = "form-control required valid", @id = "hinc_CentroMedico", @onkeypress = "return alphanumeric(event)" } })
                              @Html.ValidationMessageFor(model => model.hinc_CentroMedico, "", new { @class = "text-danger", @id = "errorhinc_CentroMedico"})
                          </div>
                      </div>

                      <div class="form-group">
                          @Html.LabelFor(model => model.hinc_Doctor, htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-10">
                              @Html.EditorFor(model => model.hinc_Doctor, "Doctor", new { htmlAttributes = new { @class = "form-control required valid", @id = "hinc_Doctor", @onkeypress = "return alphanumeric(event)" } })
                              @Html.ValidationMessageFor(model => model.hinc_Doctor, "", new { @class = "text-danger", @id = "errorhinc_Doctor" })
                          </div>
                      </div>

                      <div class="form-group">
                          @Html.LabelFor(model => model.hinc_Diagnostico,"Diagnóstico", htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-10">
                              @Html.EditorFor(model => model.hinc_Diagnostico, new { htmlAttributes = new { @class = "form-control required valid", @id = "hinc_Diagnostico", @onkeypress = "return alphanumeric(event)" } })
                              @Html.ValidationMessageFor(model => model.hinc_Diagnostico, "", new { @class = "text-danger", @id = "errorhinc_Diagnostico" })
                          </div>
                      </div>

                  

                      <div class="form-group">
                          @Html.LabelFor(model => model.hinc_FechaInicio, "Fecha Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-4">
                              @Html.TextBoxFor(model => model.hinc_FechaInicio, new { @class = "form-control datepicker  required valid", @type = "date", @id = "hinc_FechaInicio", @min = "1900-01-01", @max = "2199-12-31" })
                            @Html.ValidationMessageFor(model => model.hinc_FechaInicio, "", new { @class = "text-danger", @id = "errorhinc_FechaInicio" })
                              
                          </div>
                      </div>

                      <div class="form-group">
                          @Html.LabelFor(model => model.hinc_FechaFin, "Fecha Fin", htmlAttributes: new { @class = "control-label col-md-2" })
                          <div class="col-md-4">
                              @Html.TextBoxFor(model => model.hinc_FechaFin, new { @class = "form-control datepicker  required valid", @type = "date", @id = "hinc_FechaFin", @min = "1900-01-01", @max = "2199-12-31", @onchange = "validarfechafin(this);" })
                          @Html.ValidationMessageFor(model => model.hinc_FechaFin, "", new { @class = "text-danger", @id = "errorhinc_FechaFin" })
                          </div>
                      </div>

                  <div class="form-group">
                      <label class="control-label col-md-2">Incapacidad</label>
                      <div class="col-md-10">
                          <select class="form-control required valid" id="hinc_Espermanente" name="hinc_Espermanente">
                              <option value=1>**Seleccione una opción**</option>
                              <option value=true>Incapacidad permanente</option>
                              <option value=false>Incapacidad temporal</option>
                          </select>

                      </div>


                  </div>
                      @*<div class="form-group">
              @Html.LabelFor(model => model.hinc_Estado, htmlAttributes: new { @class = "control-label col-md-2" })
              <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.hinc_Estado)
                    @Html.ValidationMessageFor(model => model.hinc_Estado, "", new { @class = "text-danger" })
                </div>
              </div>
            </div>*@
                  <br>
                      <div class="form-group">

                          <div class="col-md-offset-1 col-md-10">
                              <div class="col-md-2 col-md-4">
                                  <input type="submit" value="Guardar" id="btnGuardar" class="btn btn-primary" />

                              </div>
                              <div class="col-md-1 col-md-4">
                                  <a href="index" id="btncancelar" class="btn btn-default">Cancelar</a>



                              </div>
                              </div>
                          </div>
                 
                  </div>
              </div>
          }
      </div>
    </div>
  </div>
</div>

@Html.Partial("_DetalleIncapacidad", new ERP_GMEDINA.Models.tbHistorialIncapacidades())

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
@Styles.Render("~/Content/plugins/izitoast/iziToast")
@Styles.Render("~/Content/plugins/izitoast/iziToast.min")
}

@section Scripts {
@*general*@
@Scripts.Render("~/Scripts/app/general")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast.min")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast")
@Scripts.Render("~/Scripts/app/General/HistorialIncapacidades/CreateIncapacidades")

}
