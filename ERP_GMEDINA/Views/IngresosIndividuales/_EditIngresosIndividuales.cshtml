@model ERP_GMEDINA.Models.tbIngresosIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditIngresoIndividual" }))
{
        @Html.HiddenFor(model => model.ini_IdIngresosIndividuales, new { htmlAttributes = new { @class = "form-control", @id = "ini_IdIngresosIndividuales" } })
    <div class="modal-body" id="Editar">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_IdIngresosIndividuales, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })
                </div>
                <div class="col-md-8">
                     @Html.EditorFor(model => model.ini_IdIngresosIndividuales, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Motivo)<label class="" id="ast1" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Motivo, new { htmlAttributes = new { @class = "text-box single-line", @id = "ini_Motivo", @autocomplete = "off", onkeyup = "ValidarCamposEditar(this.value,'-1', '-1')" } })
                    <span class="field-validation-valid text-danger" style="display: none;" id="validation_ini_Motivo">Campo Razón requerido</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.emp_Id)<label class="" id="ast2" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    <select id="emp_Id" name="emp_Id" class="form-control" onchange = "ValidarCamposEditar('-1', this.value, '-1')"></select>
                    <span class="field-validation-valid text-danger" style="display: none;" id="validation_emp_Id">Campo Empleado requerido</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Monto)<label class="" id="ast3" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Monto, new { htmlAttributes = new { @class = "form-control MascaraCantidad soloNumero", @id= "ini_Monto", @autocomplete = "off", onkeyup = "ValidarCamposEditar('-1', '-1', this.value)" } })
                    <span class="field-validation-valid text-danger" style="display: none;" id="validation_ini_Monto">Campo Monto requerido</span>
                    <span class="field-validation-valid text-danger" style="display: none;" id="validation_ini_Monto2">El campo Monto debe ser mayor que cero</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_PagaSiempre)
                </div>
                <div class="col-md-8">
                    <input type="checkbox" class="icheckbox_square-green" name="ini_PagaSiempre" id="ini_PagaSiempre">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" id="btnEditIngresoIndividual" value="Actualizar" class="btn btn-primary pull-left" />
        <button type="button" class="btn btn-danger pull-left" id="btnInactivarIngresoIndividual">Inactivar</button>
        <button type="button" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
    </div>

}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarIngresoIndividual" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ini_IdIngresosIndividuales)
}

