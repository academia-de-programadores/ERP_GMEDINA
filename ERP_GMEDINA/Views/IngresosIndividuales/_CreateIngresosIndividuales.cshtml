@model ERP_GMEDINA.Models.tbIngresosIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post))
{
    <div class="modal-body" id="Crear">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ini_IdIngresosIndividuales, new { htmlAttributes = new { @class = "form-control", @id = "ini_IdIngresosIndividuales" } })

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Motivo)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Motivo, new { htmlAttributes = new { @class = "form-control", @id = "ini_Motivo" } })
                    @Html.ValidationMessageFor(model => model.ini_Motivo, "", new { @class = "text-danger", @id = "validatione1" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.emp_Id)
                </div>
                <div class="col-md-8">
                    <select id="emp_Id" name="emp_Id" class="form-control"></select>
                    <label class="text-danger" id="validatione2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo Empleado es Requerido.</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Monto)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Monto, new { htmlAttributes = new { @class = "form-control", @id = "ini_Monto" } })
                    @Html.ValidationMessageFor(model => model.ini_Monto, "", new { @class = "text-danger", @id = "validatione3" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_PagaSiempre)
                </div>
                <div class="col-md-8">
                        <input type="checkbox" class="i-checks" id="ini_PagaSiempre" name="ini_PagaSiempre" />
                </div>
            </div>

        </div>

    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white pull-right" id="btnCerrarCrear">Cerrar</button>
            <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroIngresoIndividual">Guardar</button>
            <div style="display:none" class="btn pull-left" id="cargandoCrear"></div>
        </div>

}




