@model ERP_GMEDINA.Models.tbIngresosIndividuales

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCreateIngresosIndividuales" }))
{
    @Html.HiddenFor(model => model.ini_IdIngresosIndividuales)
    <div class="modal-body" id="Crear">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Motivo)<label class="" id="ast1" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Motivo, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @id = "ini_Motivo", onkeyup = "ValidarCamposCrear(this.value, '-1', '-1')" } })
                    <label class="text-danger" id="Validation_Motivo" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo motivo requerido</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.emp_Id)<label class="" id="ast2" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    <select id="emp_IdCrear" name="emp_Id" class="form-control" onchange="ValidarCamposCrear('-1', this.value, '-1')">
                        <option></option>
                    </select>
                    <span class="text-danger" id="validatione_empleadoID" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Empleado Requerido.</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_Monto)<label class="" id="ast3" style="opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ini_Monto, new { htmlAttributes = new { @class = "col-md-9 MascaraCantidad", @id = "ini_Monto", @disabled = "disabled", @autocomplete = "off", onkeyup = "ValidarCamposCrear('-1', '-1', this.value)" } })
                    <div>@Html.ValidationMessageFor(model => model.ini_Monto, "", new { @class = "text-danger", @id = "Validation_monto" })</div>
                    <label class="text-danger" id="Validation_Monto2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Monto requerido</label>
                    <label class="text-danger" id="Validation_Monto3" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo Monto debe ser mayor que cero</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_PagaSiempre)
                </div>
                <div class="col-md-8">
                    <input type="checkbox" class="icheckbox_square-green" id="ini_PagaSiempre" name="ini_PagaSiempre" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.ini_comentario)
                </div>
                <div class="col-md-4">
                    <textarea rows="5" class="note-editable panel-body" cols="43" name="ini_comentario" id="ini_comentario" maxlength="500" style="resize:none"></textarea>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white pull-right" id="btnCerrarCrear">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnCreateRegistroIngresoIndividual">Guardar</button>
        <div style="display:none" class="btn pull-left" id="cargandoCrear"></div>
    </div>

}




