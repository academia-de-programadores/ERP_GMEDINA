@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_HistorialPermisos
@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("Permisos", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de Permisos</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Empleados</label>
                                @* @Html.LabelFor(model => model.emp_Id, htmlAttributes: new { @class = "control-label col-md-3" })*@

                                @Html.DropDownList("emp_Id", (IEnumerable<SelectListItem>)ViewBag.Empleados, "Seleccione una opción", new { @class = "form-control required valid " })

                                @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="font-normal">Fecha Inicio</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control required valid", @type = "date", @name = "FechaInicio", @id = "FechaInicio" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="font-normal">
                                Fecha Fin
                            </label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control required valid", @type = "date", @name = "FechaFin", @id = "FechaFin" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                            <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>
                        </div>
                    </div>
                </div>
    </div>

}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/General")
    @Scripts.Render("~/Scripts/app/General/PermisosRPT/PermisosRPT.js")

}




