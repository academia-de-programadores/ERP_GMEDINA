@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_HistorialAmonestaciones
@{
    ViewBag.Title = "Amonestaciones";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("HistorialAmonestacionesRPT", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de amonestaciones</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Amonestación</label>

                                @Html.DropDownList("tamo_Id", (IEnumerable<SelectListItem>)ViewBag.Turno, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.tamo_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>

                        <div class="col-md-6">
                            <label class="font-normal">Fecha Fin</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.Colaborador, new { htmlAttributes = new { @class = "form-control", @type = "text", @name = "Fecha", @id = "Fecha" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Colaborador, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="font-normal">Fecha Fin</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "Fecha", @id = "Fecha" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label class="font-normal">Fecha Fin</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "Fecha1", @id = "Fecha1" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>

                </div>
            </div>
        </div>
    </div>
}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>