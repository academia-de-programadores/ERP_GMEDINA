
@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_HistorialAudienciaDescargo
@{
    ViewBag.Title = "AudienciaDescargo";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("HistorialAudienciaDescargo", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de amonestaciones</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Colaborador</label>
                                @Html.DropDownList("per_Identidad", (IEnumerable<SelectListItem>)ViewBag.EmpleadoAUDE, "(Opcional) seleccione el colaborador", new { @id = "per_Identidad", @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.per_Identidad, "", new { @class = "text-danger" })
                            </div>
                            <br />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>

                </div>
            </div>
        </div>
    </div>
}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>