@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_HistorialVacaciones
@{
    ViewBag.Title = "Reportes de Vacaciones";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("HistorialVacacionesRPT", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de Vacaciones</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Empleado</label>

                                @Html.DropDownList("emp_Id", (IEnumerable<SelectListItem>)ViewBag.Empleados, "Seleccione una opción", new { @class = "form-control" })

                                @*<div class="col-md-6">
                                    <label class="font-normal">Año</label>
                                    @Html.DropDownList("hvac_AnioVacaciones", (IEnumerable<SelectListItem>)ViewBag.Anios, "Seleccione una opción", new { @class = "form-control" })
                                </div>*@

                                @*<div class="col-md-6">
                                    <label class="font-normal">Mes</label>
                                    @Html.DropDownList("hvac_MesVacaciones", (IEnumerable<SelectListItem>)ViewBag.Mes, "Seleccione una opción", new { @class = "form-control" })
                                </div>*@
                            </div>
                            <br />
                        </div>

                        <div class="col-md-3">
                            <label class="font-normal">Fecha Inicio</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.hvac_FechaInicio, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "hvac_FechaInicio", @id = "hvac_FechaInicio" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.hvac_FechaInicio, "", new { @class = "text-danger" })

                            
                        </div>

                        <div class="col-md-3">

                            <label class="font-normal">Fecha Fin</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.hvac_FechaFin, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "hvac_FechaFin", @id = "hvac_FechaFin" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.hvac_FechaFin, "", new { @class = "text-danger" })


                            </div>


                        </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <div class="col-lg-offset-5">
                        <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>
                    </div>

                    </div>
            </div>
        </div>
    </div>

}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>


