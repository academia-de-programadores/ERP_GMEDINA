@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_HistorialSalidas
@{
    ViewBag.Title = "HistorialSalidasRPT";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}


@using (Html.BeginForm("HistorialSalidasRPT", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de deduciones</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Tipo Salidas</label>

                                @Html.DropDownList("tsal_Id", (IEnumerable<SelectListItem>)ViewBag.TipoSalida, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.tsal_Id, "", new { @class = "text-danger" })
                            </div>
                            <br />
                        </div>

                        <div class="col-md-6">
                            <label class="font-normal">Fecha Salida</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.hsal_FechaSalida, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "hsal_FechaSalida", @id = "hsal_FechaSalida" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.hsal_FechaSalida, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>

                </div>
            </div>
        </div>
    </div>

}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>


