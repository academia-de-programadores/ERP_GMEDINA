@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.vV_RPT_Empleado_Curriculum
@{
    ViewBag.Title = "Empleado";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("Empleado", "Reporte", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de Empleado Curriculum</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Personas</label>

                                @Html.DropDownList("Per_Id", (IEnumerable<SelectListItem>)ViewBag.FechaNacimiento, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.Per_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Habilidad</label>

                                @Html.DropDownList("habi_Id", (IEnumerable<SelectListItem>)ViewBag.Habilidades, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.habi_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Competencia</label>

                                @Html.DropDownList("comp_Id", (IEnumerable<SelectListItem>)ViewBag.Competencias, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.comp_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>

                        <div class="col-md-6">
                            <label class="font-normal">Fecha</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.Fecha_Nacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "Fecha_Nacimiento", @id = "Fecha_Nacimiento" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Fecha_Nacimiento, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>

                </div>
            </div>
        </div>
    </div>

}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12">
        <div class="float-e-margins">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>




