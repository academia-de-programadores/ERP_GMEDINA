@using ReportViewerForMvc;
@model ERP_GMEDINA.Models.V_RPT_EmpleadoCurriculum
@{
    ViewBag.Title = "Reportes de Empleados";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@using (Html.BeginForm("Empleado", "ReportesRRHH", FormMethod.Post, new { id = "" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Reportes de Empleados</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Habilidad</label>

                                @Html.DropDownList("habi_Id", (IEnumerable<SelectListItem>)ViewBag.Habilidad, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.habi_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>

                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="font-normal">Competencias</label>

                                @Html.DropDownList("comp_Id", (IEnumerable<SelectListItem>)ViewBag.Competencias, "Seleccione una opción", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.comp_Id, "", new { @class = "text-danger" })
                            </div>


                            <br />
                        </div>

                        @*<div class="col-md-6">
                            <label class="font-normal">Fecha</label>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date", @name = "Fecha", @id = "Fecha" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>*@

                    <button type="submit" class="btn btn-primary btn-sm" id="btnPrevisualizarDeducciones">Previsualizar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

<br />

@{
    string visibilidadPreview = ViewBag.ReportViewer == null ? "none" : "";
}

<div class="row" style="display:@visibilidadPreview;">
    <div class="col-lg-12  ibox-content">
        <div class="float-e-margins ">
            <div class="ibox-title">
                <h5>Previsualización de reporte</h5>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="col-lg-10 col-md-offset-1">
                @{
                    if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    }
                }
            </div>
        </div>
    </div>
</div>