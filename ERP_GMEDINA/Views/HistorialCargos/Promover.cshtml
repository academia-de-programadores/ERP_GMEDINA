@model ERP_GMEDINA.Models.tbEmpleados

@{
    ViewBag.Title = "Promover";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "pull-right" })
                    <h2>Promover</h2>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormNuevo" }))
                        {
                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.emp_Id, "Empleado", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("emp_Id", null,"**Selecione una opción**", htmlAttributes: new { @class = "form-control required valid" })
                                        @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger", @id = "erroremp_Id" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.car_Id, "Cargo", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("car_Id", null, "**Selecione una opción**", htmlAttributes: new { @class = "form-control required valid" })
                                        @Html.ValidationMessageFor(model => model.car_Id, "", new { @class = "text-danger", @id = "errorcar_Id" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.area_Id, "Área", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("area_Id", null, "**Selecione una opción**", htmlAttributes: new { @class = "form-control required valid", @onchange = "LLenarDepto(this);" })
                                        @Html.ValidationMessageFor(model => model.area_Id, "", new { @class = "text-danger", @id = "errorarea_Id" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="depto_Id">Departamento</label>
                                    <div class="col-md-8">
                                        <select class="form-control required valid" id="depto_Id" name="depto_Id"></select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="depto_Id" data-valmsg-replace="true" id="errordepto_Id"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.jor_Id, "Jornada", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("jor_Id", null, "**Selecione una opción**", htmlAttributes: new { @class = "form-control required valid" })
                                        @Html.ValidationMessageFor(model => model.jor_Id, "", new { @class = "text-danger", @id = "errorjor_Id" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="hcar_RazonPromocion">Razón de la promoción</label>
                                    <div class="col-md-8">
                                        <input class="form-control required valid text-box single-line" data-val="true" data-val-maxlength="Excedió el número máximo de carácteres" data-val-maxlength-max="255" data-val-required="El campo Razón de promoción es requerido" id="hcar_RazonPromocion" name="hcar_RazonPromocion" type="text" value="">
                                        <span class="field-validation-valid" data-valmsg-for="hcar_RazonPromocion" data-valmsg-replace="true" id="errorhcar_RazonPromocion"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="sue_Cantidad">Sueldo</label>
                                    <div class="col-md-8">
                                        <input class="form-control required valid text-box single-line" data-val="true" data-val-maxlength="Excedió el número máximo de carácteres" data-val-maxlength-max="18" data-val-required="El campo Sueldo es requerido" id="sue_Cantidad" name="sue_Cantidad" type="number" value="" onkeypress="return filterFloat(event,this);">
                                        <span class="field-validation-valid" data-valmsg-for="sue_Cantidad" data-valmsg-replace="true" id="errorsue_Cantidad"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="req_Id">Requisición</label>
                                    <div class="col-md-8">
                                        <select class="form-control required valid" id="req_Id" name="req_Id"></select>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="req_Id" data-valmsg-replace="true" id="errorreq_Id"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="emp_Fechaingreso">Fecha</label>
                                    <div class="col-md-8">
                                        <input class="form-control required valid text-box single-line" data-val="true" data-val-required="El campo Fecha es requerido" data-val-date="Fecha no tiene el formato correcto" id="emp_Fechaingreso" name="emp_Fechaingreso" min="1900-01-01" max="2500-12-31" type="date" value="">
                                        <span class="field-validation-valid text-danger" data-valmsg-for="emp_Fechaingreso" data-valmsg-replace="true" id="erroremp_Fechaingreso"></span>
                                    </div>
                                </div>

                            </div>
                        }
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="button" value="Guardar" class="btn btn-primary" id="btnGuardar" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Styles.Render("~/Content/plugins/izitoast/iziToast")
@Styles.Render("~/Content/plugins/izitoast/iziToast.min")
@section Scripts {

    @Scripts.Render("~/Scripts/app/general")
    @Scripts.Render("~/Scripts/app/general/PromoverHistorialCargos")
}


