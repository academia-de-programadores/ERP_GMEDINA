@model IEnumerable<ERP_GMEDINA.Models.tbHistorialCargos>

@{
    ViewBag.Title = "Historial Cargos";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Historial de Puesto</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" onclick="btnAgregar()" class="btn btn-primary btn-xs" value="Promover Empleado" />
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th>Número</th>
                                <th>Encargado</th>
                                <th>Anterior</th>
                                <th>Nuevo</th>
                                <th>Fecha</th>
                                <th>Acción</th>
                                @*<th>Estado</th>*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Deshacer", new ERP_GMEDINA.Models.tbHistorialCargos())

