@model ERP_GMEDINA.Models.tbPersonas

@{
    ViewBag.Title = "Editar Persona";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";

}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default pull-right" })
                    <h2>Editar</h2>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div id="Wizard">
                            <h1>Datos Personales</h1>
                            <div>
                                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormPersonas" }))
                                {

                                <!--Datos de la Persona-->

                                    <div id="tbPersonas">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="pull-right">Campos requeridos (*)</label>
                                        </div>
                                        @Html.HiddenFor(model => model.per_Id)
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Identidad, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.per_Identidad, new { htmlAttributes = new { @class = "required form-control", type = "number", @size = "16", @onkeypress = "return Numericos(event)" } })
                                                @Html.ValidationMessageFor(model => model.per_Identidad, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.per_Nombres, new { htmlAttributes = new { @class = "required form-control" ,@maxlength = "50", @onkeypress = "return alphanumeric(event)" } })
                                                @Html.ValidationMessageFor(model => model.per_Nombres, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.per_Apellidos, new { htmlAttributes = new { @class = "required form-control", @maxlength = "50", @onkeypress = "return alphanumeric(event)" } })
                                                @Html.ValidationMessageFor(model => model.per_Apellidos, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_FechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.per_FechaNacimiento, new { @class = "form-control datepicker", @type = "date" , @maxlength = "10", @min = "1899/01/01" })
                                                @Html.ValidationMessageFor(model => model.per_FechaNacimiento, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Sexo, htmlAttributes: new { @class = " control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("per_Sexo", null, htmlAttributes: new { @class = " required form-control" })
                                                @Html.ValidationMessageFor(model => model.per_Sexo, "", new { @class = "text-danger", @onchange = "OnSelectionChange" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.nac_Id, null, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("nac_Id", null, htmlAttributes: new { @class = "required form-control" })
                                                @Html.ValidationMessageFor(model => model.nac_Id, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Direccion, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <textarea class="form-control" rows="4" name="per_Direccion" cols="50" maxlength="500" id="per_Direccion"></textarea>
                                                @Html.ValidationMessageFor(model => model.per_Direccion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" id="per_Telefono" name="per_Telefono" data-mask="+999 9999 9999" maxlength="14">
                                                @Html.ValidationMessageFor(model => model.per_Telefono, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_CorreoElectronico, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.per_CorreoElectronico, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @placeholder = "ejemplo@ejemplo.com" } })
                                                @Html.ValidationMessageFor(model => model.per_CorreoElectronico, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_EstadoCivil, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("per_EstadoCivil", null, htmlAttributes: new { @class = "required form-control" })
                                                @Html.ValidationMessageFor(model => model.per_EstadoCivil, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.per_TipoSangre, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("per_TipoSangre", null, htmlAttributes: new { @class = "required form-control" })
                                                @Html.ValidationMessageFor(model => model.per_TipoSangre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>

                                }
                            </div>
                            <!--Competencias-->
                            <h1>Competencias</h1>
                            <div>
                                <h2>Competencias</h2>
                                <select multiple name="SlctCompetencias" class="form-control dual_select SlctCompetencias"></select>
                            </div>
                            <!--Habilidades-->
                            <h1>Habilidades</h1>
                            <div>
                                <h2>Habilidades</h2>
                                <select multiple name="SlctHabilidades" class="form-control dual_select SlctHabilidades"></select>
                            </div>
                            <!--Idiomas-->
                            <h1>Idiomas</h1>
                            <div>
                                <h2>Idiomas</h2>
                                <select multiple name="SlctIdiomas" class="form-control dual_select SlctIdiomas"></select>
                            </div>
                            <!--RequerimientosEspeciales-->
                            <h1>Requisitos Especiales</h1>
                            <div>
                                <h2>Requisitos Especiales</h2>
                                <select multiple name="SlctReqEspeciales" class="form-control dual_select SlctReqEspeciales"></select>
                            </div>
                            <!--Titulos-->
                            <h1>Educación</h1>
                            <div>
                                <h2>Educación</h2>
                                <select multiple name="SlctTitulos" class="form-control dual_select SlctTitulos"></select>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
@*@Modal Confirmacion*@
<div class="modal fade" id="ModalHabilitar" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Editar</h4>
            </div>
            <div class="modal-body" id="Activar">
                ¿Está seguro que desea dejar los siguientes campos vacíos?(<label id="campos"></label>)

            </div>
            <input type="hidden" value="" id="txtIdRestore">
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary pull-right" id="btnConfirmar" data-dismiss="modal">Si</button>
                <div style="display:none" class="btn pull-right" id="cargandoActivar"></div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/plugins/duallistStyles")
    @Styles.Render("~/plugins/wizardStepsStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
    @Styles.Render("~/Content/plugins/izitoast/iziToast.min")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/InputMask")

}

@section Scripts {
    @Scripts.Render("~/plugins/validate")
@*general*@
@Scripts.Render("~/Scripts/app/general")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast.min")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast")
    @Scripts.Render("~/plugins/duallist")
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/Scripts/app/general/EditPersonas")
    @Scripts.Render("~/Scripts/plugins/jasny")
}