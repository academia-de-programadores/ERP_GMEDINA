@model ERP_GMEDINA.Models.tbPersonas
<div class="modal inmodal" id="ModalInactivar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">¿Seguro que desea inactivar el registro?</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormInactivar" }))
                {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" id="per_Id" name="per_Id" />
                        <div class="form-group">
                            @Html.LabelFor(model => model.per_RazonInactivo, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.per_RazonInactivo, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return SinCaracteresEspeciales(event)" } })
                                @Html.ValidationMessageFor(model => model.per_RazonInactivo, "", new { @class = "text-danger", @id = "errorper_RazonInactivo" })
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger pull-right" id="InActivar">Si</button>
            </div>
        </div>
    </div>
</div>
