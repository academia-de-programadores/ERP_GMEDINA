@model IEnumerable<ERP_GMEDINA.Models.tbTipoHoras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tipos de Horarios</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Horarios</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalNuevo">
                            Registrar Horario
                        </button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th>@Html.DisplayNameFor(model => model.tiho_Descripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.tiho_Recargo)</th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row" data-id="@item.tiho_Id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tiho_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tiho_Recargo)
                                    </td>

                                    <td>

                                        <a class="btn btn-primary btn-xs " onclick="tablaDetalles(@item.tiho_Id)">Detalles</a>
                                        <a class="btn btn-default btn-xs " onclick="tablaEditar(@item.tiho_Id)">Editar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*MODAL CREAR*@

<div class="modal inmodal" id="ModalNuevo" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Crear Horario</h4>
                    </div>
                        <div class="modal-body">

                            <p>
                                @Html.Partial("_CreateTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary pull-left" id="btnGuardar">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
@*MODAL CREAR*@


            @*MODAL EDITAR*@
            <div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated fadeIn">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                   
                            <h4 class="modal-title">Editar Horario</h4>

                        </div>
                        <div class="modal-body" id="ModalEdit">


                            @Html.Partial("_EditTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary pull-left" id="btnActualizar">Actualizar</button>
                            <button type="button" class="btn btn-danger pull-left" id="btnInhabilitar">Inhabilitar</button>
                        </div>
                    </div>
                </div>
            </div>
            @*MODAL EDITAR*@


            @*MODAL INHABILITAR*@
            <div class="modal inmodal" id="ModalInhabilitar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated fadeIn">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                            <h4 class="modal-title">¿Seguro que desea inhabilitar el registro?</h4>
                        </div>
                        <div class="modal-body" id="ModalInhabilitar">
                            <p>
                                @Html.Partial("_InhabilitarTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                            </p>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary pull-left" id="InActivar">Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>
            @*MODAL INHABILITAR*@


@*MODAL DETALLES*@
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>

                <h4 class="modal-title">Detalles del Horario</h4>

            </div>
            <div class="modal-body" id="ModalDetallesR">
                <p>
                    @Html.Partial("_DetallesTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary pull-left" data-id="" id="btnEditar">Editar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL DETALLES*@







            @section Styles {
                @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles") 
                 @Scripts.Render("~/plugins/izitoast")
            }

            @section Scripts {
             @Scripts.Render("~/plugins/dataTables")
            @Scripts.Render("~/Scripts/app/general")
                @Scripts.Render("~/Scripts/app/General/TipoHoras")
               
            }
