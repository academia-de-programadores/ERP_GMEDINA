@model ERP_GMEDINA.Models.tbTipoHoras

@{
    ViewBag.Title = "Tipo de Hora";
    Layout = "~/Views/Shared/_LayoutBaseRRHH.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tipos de Horas</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Tipo de Hora" />
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th>Número</th>
                                <th>Hora</th>
                                <th>Recargo</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody >
                      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*MODAL CREAR*@

<div class="modal inmodal" id="ModalNuevo" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Crear Tipo de Hora</h4>
                    </div>
                        <div class="modal-body">

                            <p>
                                @Html.Partial("_CreateTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary pull-left" id="btnGuardar">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
@*MODAL CREAR*@


            @*MODAL EDITAR*@
            <div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated fadeIn">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                   
                            <h4 class="modal-title">Editar Tipo de Hora</h4>

                        </div>
                        <div class="modal-body" id="ModalEdit">


                            @Html.Partial("_EditTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary pull-left" id="btnActualizar">Editar</button>
                            <button type="button" class="btn btn-danger pull-left" id="btnInactivar">Inactivar</button>
                        </div>
                    </div>
                </div>
            </div>
            @*MODAL EDITAR*@


            @*MODAL Inactivar*@
            <div class="modal inmodal" id="ModalInactivar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated fadeIn">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                            <h4 class="modal-title">¿Seguro que desea inactivar el registro?</h4>
                        </div>
                        <div class="modal-body" id="ModalInactivar">
                            <p>
                                @Html.Partial("_InhabilitarTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                            </p>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                            <button type="button" class="btn btn-danger pull-right" id="InActivar">Si</button>
                        </div>
                    </div>
                </div>
            </div>
            @*MODAL Inactivar*@


@*MODAL DETALLES*@
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>

                <h4 class="modal-title">Detalles Tipo de Hora</h4>

            </div>
            <div class="modal-body" id="ModalDetallesR">
                <p>
                    @Html.Partial("_DetallesTipoHorarios", new ERP_GMEDINA.Models.tbTipoHoras())

                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                @*<button type="button" class="btn btn-primary pull-left" data-id="" id="btnEditar">Editar</button>*@
            </div>
        </div>
    </div>
</div>
@*MODAL DETALLES*@



<div class="modal fade" id="ModalHabilitar" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Activar</h4>
            </div>
            <div class="modal-body" id="Activar">
                ¿Está seguro que desea activar este registro?
            </div>
            <input type="hidden" value="" id="txtIdRestore">
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary pull-right" id="btnActivar" data-dismiss="modal">Si</button>
                <div style="display:none" class="btn pull-right" id="cargandoActivar"></div>
            </div>
        </div>
    </div>
</div>




            @section Styles {
                @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles") 
                @Styles.Render("~/Content/plugins/izitoast/iziToast")
                @Styles.Render("~/Content/plugins/izitoast/iziToast.min")
            }

            @section Scripts {
@* datatble *@
@Scripts.Render("~/Scripts/plugins/dataTablesMatutina/DatatablesConfigurations")
@Scripts.Render("~/Scripts/plugins/dataTablesMatutina/datatables.min")

@*general*@
@Scripts.Render("~/Scripts/app/general")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast.min")
@Scripts.Render("~/Scripts/plugins/iziToast/iziToast")
             @Scripts.Render("~/Scripts/app/General/TipoHoras")
          
                @Scripts.Render("~/Scripts/app/general/TipoHOras/Admin")
               
            }
