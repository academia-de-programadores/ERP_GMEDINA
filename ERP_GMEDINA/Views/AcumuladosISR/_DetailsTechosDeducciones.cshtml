@model ERP_GMEDINA.Models.tbAcumuladosISR
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmDetailsAcumuladosISR" }))
{
    @Html.AntiForgeryToken()
    <!-- Nuevo diseño -->
    <div class="ibox-content">
        <div class="form-horizontal">
            <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.emp_Id, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })
                    </div>
                    <div class="col-md-6">
                        <span id="emp_Id">@Html.DisplayFor(model => model.emp_Id, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })</span>
                    </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })
                </div>
                <div class="col-md-6">
                    <span id="aisr_Descripcion">@Html.DisplayFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })
                </div>
                <div class="col-md-6">
                    <span id="aisr_Monto">@Html.DisplayFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.aisr_DeducirISR)
                </div>
                <div class="col-md-6">
                    <span id="aisr_DeducirISRDetails">@Html.DisplayFor(model => model.aisr_DeducirISR, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Auditoria -->
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h4>Auditoría</h4>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            @Html.HiddenFor(model => model.aisr_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                            <td><span id="tbUsuario_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            <td><span id="aisr_FechaCrea">@Html.DisplayFor(model => model.aisr_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            @Html.HiddenFor(model => model.aisr_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                            <td><span id="tbUsuario1_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            <td><span id="aisr_FechaModifica">@Html.DisplayFor(model => model.aisr_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}