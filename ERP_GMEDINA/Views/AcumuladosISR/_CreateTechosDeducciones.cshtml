@model ERP_GMEDINA.Models.tbAcumuladosISR
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAcumuladosISRCreate" }))
{
    <div class="modal-body" id="Crear">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.aisr_Id)
            @Html.HiddenFor(model => model.aisr_FechaCrea)
            @Html.HiddenFor(model => model.aisr_UsuarioCrea)

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.aisr_Descripcion, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoAcumuladosISR">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aisr_Descripcion, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div> 

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.aisr_Monto, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoAcumuladosISR">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aisr_Monto, "", new { @class = "text-danger", @id = "Validation_descripcion" })
                </div>
            </div> 
        </div>
        </div>
        <div class="modal-footer">
            <input type="button" value="Cerrar" id="btnCerrarCrear" class="btn btn-default pull-right" />
            <input type="submit" value="Guardar" id="btnCreateAcumuladosISR" class="btn btn-primary pull-left" />
        </div>
        }
