@model ERP_GMEDINA.Models.tbAcumuladosISR

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditAcumuladosISR" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.aisr_Id)
        @Html.HiddenFor(model => model.aisr_FechaCrea)
        @Html.HiddenFor(model => model.aisr_UsuarioCrea)

        <div class="form-group">
            @Html.LabelFor(model => model.aisr_Descripcion, htmlAttributes: new { @class = "control-label col-md-3 pull-left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aisr_Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.aisr_Monto, htmlAttributes: new { @class = "control-label col-md-3 pull-left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aisr_Monto, "", new { @class = "text-danger" })
            </div>
        </div>  
    </div>
        <div class="modal-footer">
            @*data-dismiss="modal"*@
            <input type="submit" class="btn btn-primary" id="btnEditarAcumulado" value="Aceptar">

            @*<button type="button" class="btn btn-primary" id="btnEditarTecho">Aceptar</button>*@
            <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnInactivarAcumuladosISR">Inactivar</button>
            <button type="button" class="btn btn-white" id="btnCerrarEditar">Cerrar</button>
        </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarAcumuladosISR" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.aisr_Id)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
