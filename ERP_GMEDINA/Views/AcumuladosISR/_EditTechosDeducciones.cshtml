@model ERP_GMEDINA.Models.tbAcumuladosISR
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditAcumuladosISR" }))
{
    <!-- CAJAS DE TEXTO -->
    <div class="modal-body" id="Editar">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.aisr_Id)
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.aisr_Descripcion, htmlAttributes: new { /*@class = "control-label col-md-3 pull-left" */})
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aisr_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.aisr_Monto, htmlAttributes: new { /*@class = "control-label col-md-3 pull-left"*/ })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                    @Html.ValidationMessageFor(model => model.aisr_Monto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <!-- BOTONES -->
    <div class="modal-footer">
        <input type="submit" class="btn btn-primary pull-left" id="btnEditarAcumulado" value="Actualizar">
        <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" id="btnInactivarAcumuladosISR">Inhabilitar</button>
        <button type="button" data-dismiss="modal" class="btn btn-white pull-right" id="btnCerrarEditar">Cerrar</button>
    </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarAcumuladosISR" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.aisr_Id)
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
