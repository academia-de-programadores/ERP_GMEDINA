@model ERP_GMEDINA.Models.tbAcumuladosISR
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEditAcumuladosISR" }))
{
    <!-- CAJAS DE TEXTO -->
    <div class="modal-body" id="Editar">

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.aisr_Id)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.aisr_Descripcion, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoAcumuladosISREditar">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.aisr_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aisr_Descripcion, "", new { @class = "text-danger", @id = "Edit_Validation_descripcion" })
                </div>
            </div> 
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.aisr_Monto, htmlAttributes: new { @class = "control-label" })
                    <label class="" id="AsteriscoAcumuladosISREditar">*</label>
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.aisr_Monto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aisr_Monto, "", new { @class = "text-danger", @id = "Edit_Validation_descripcion" })
                </div>
            </div> 
        </div>
    </div>
    <!-- BOTONES -->
    <div class="modal-footer">
        <input type="button" value="Cerrar" id="btnCerrarEditar" class="btn btn-default pull-right" />
        <input type="submit" value="Actualizar" id="btnEditarAcumulado" class="btn btn-primary pull-left" />
        <input type="button" value="Inactivar" id="btnInactivarAcumuladosISR" class="btn btn-danger pull-left" />
    </div>
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInactivarAcumuladosISR" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.aisr_Id)
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
