@model ERP_GMEDINA.Models.tbHistorialAudienciaDescargo
<div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Editar Audiencia de Descargo</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormEditar" }))
                {
                        <div class="form-horizontal">
                            <div hidden="hidden" class="col-md-8">
                                <input id="aude_Id" name="aude_Id" type="text" value="">
                            </div>                    
                            <div class="form-group">
                                <label class="control-label col-md-3" for="aude_FechaAudiencia">Fecha Audiencia</label>
                                <div class="col-md-8 has-error">
                                    <input class="form-contro required valid text-box single-line" data-val="true" data-val-date="The field scan_Fecha must be a date." id="aude_FechaAudiencia2" name="aude_FechaAudiencia" type="date" value="">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="aude_FechaAudiencia" data-valmsg-replace="true" id="erroraude_FechaAudiencia"></span>
                                </div>
                            </div>
					</div>
				}
            </div>
			<div class="modal-footer">
				<button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
				<button type="button" class="btn btn-primary pull-left" id="btnActualizar">Actualizar</button>
			</div>
		</div>
	</div>
</div>

