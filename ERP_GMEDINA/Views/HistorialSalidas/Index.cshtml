@model IEnumerable<ERP_GMEDINA.Models.tbHistorialSalidas>

@{
                ViewBag.Title = "Salidas";
                Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Historial de salidas</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de salidas de personal</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar salidas de personal", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th></th>
                                <th>Nombre Completo</th>
                                <th>Tipo Salida</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*MODAL EDITAR*@
<div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>

                <h4 class="modal-title">Editar Horario</h4>

            </div>
            <div class="modal-body" id="ModalEdit">

                @Html.Partial("_EditHistorialSalidas", new ERP_GMEDINA.Models.tbHistorialSalidas())

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary pull-left" id="btnActualizar">Actualizar</button>
                <button type="button" class="btn btn-danger pull-left" id="btnInhabilitar">Inhabilitar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL EDITAR*@


@*MODAL INHABILITAR*@
<div class="modal inmodal" id="ModalInhabilitar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">¿Seguro que desea inhabilitar el registro?</h4>
            </div>
            <div class="modal-body" id="ModalInhabilitar">
                <p>
                    @Html.Partial("_InhabilitarHistorialSalidas", new ERP_GMEDINA.Models.tbHistorialSalidas())

                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary pull-left" id="InActivar">Actualizar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL INHABILITAR*@


@*MODAL DETALLES*@
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>

                <h4 class="modal-title">Detalles del Horario</h4>

            </div>
            <div class="modal-body" id="ModalDetallesAX">
                <p>
                    @Html.Partial("_DetallesHistorialSalidas", new ERP_GMEDINA.Models.tbHistorialSalidas())

                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary pull-left" data-id="" id="btnEditar">Editar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL DETALLES*@
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}
@section Scripts {
    @Scripts.Render("~/Scripts/app/general")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/general/IndexHistorialSalidas")
}
