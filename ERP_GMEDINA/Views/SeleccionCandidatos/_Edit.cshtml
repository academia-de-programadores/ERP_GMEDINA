@model ERP_GMEDINA.Models.tbSeleccionCandidatos
<div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Editar Selección de Candidatos</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormEditar" }))
                {
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })   
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.tbPersonas.per_Identidad, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-8">
                                        <input class="form-control text-box single-line" data-val="true" disabled="disabled" data-val-maxlength="Excedió el número máximo de carácteres" data-val-maxlength-max="50" data-val-required="El campo &quot;Identidad&quot;es requerido" id="tbPersonas_per_Identidad" name="tbPersonas.per_Identidad" type="text" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.fare_Id, "Fase", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-8">
                                    @Html.DropDownList("fare_Id", null, htmlAttributes: new { @class = "form-control required valid" })
                                    @Html.ValidationMessageFor(model => model.fare_Id, "", new { @class = "text-danger", @id = "errorfare_Id" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3" for="scan_Fecha">Fecha de Registro</label>
                                <div class="col-md-8">
                                    <input class="form-control required valid text-box single-line" data-val="true" data-val-date="The field scan_Fecha must be a date." id="scan_Fecha" name="scan_Fecha" type="date" value="2018-01-01">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="scan_Fecha" data-valmsg-replace="true" id="errorscan_Fecha"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.req_Id, "Plaza", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-8">
                                    @Html.DropDownList("req_Id", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.req_Id, "", new { @class = "text-danger", @id = "errorreq_Id" })
                                </div>
                            </div>
					</div>
				}
            </div>
			<div class="modal-footer">
				<button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
				<button type="button" class="btn btn-primary pull-left" id="btnActualizar">Actualizar</button>
			</div>
		</div>
	</div>
</div>

