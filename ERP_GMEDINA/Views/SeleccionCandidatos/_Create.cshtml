@model ERP_GMEDINA.Models.tbSeleccionCandidatos
<div class="modal inmodal" id="ModalNuevo" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Crear Selección de Candidato</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormNuevo" }))
                {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.per_Id, "Persona", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-8">
                                @Html.DropDownList("per_Id", null, "Seleccione una opción", htmlAttributes: new { @class = "form-control required valid" })
                                @Html.ValidationMessageFor(model => model.per_Id, "", new { @class = "text-danger", @id = "errorper_Id" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="scan_Fecha">Fecha</label>
                            <div class="col-md-8">
                                <input class="form-control required valid text-box single-line" data-val="true" data-val-date="The field scan_Fecha must be a date." id="scan_Fecha" name="scan_Fecha" type="date" value="">
                                <span class="field-validation-valid text-danger" data-valmsg-for="scan_Fecha" data-valmsg-replace="true" id="errorscan_Fecha"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.fare_Id, "Fase", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-8">
                                @Html.DropDownList("fare_Id", null, "Seleccione una opción", htmlAttributes: new { @class = "form-control required valid" })
                                @Html.ValidationMessageFor(model => model.fare_Id, "", new { @class = "text-danger", @id = "errorfare_Id" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.req_Id, "Plaza", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-8">
                                @Html.DropDownList("req_Id", null, "Seleccione una opción", htmlAttributes: new { @class = "form-control required valid" })
                                @Html.ValidationMessageFor(model => model.req_Id, "", new { @class = "text-danger", @id = "errorreq_Id" })
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary pull-left" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>
