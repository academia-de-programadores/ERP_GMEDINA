@model ERP_GMEDINA.Models.tbEmpleadoComisiones

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoComisionesActivar" }))
{
    <div class="ibox-content">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.cc_Id)

            <div class="form-group">
                @Html.LabelFor(model => model.cc_Id, htmlAttributes: new { @class = "control-label col-md-2", })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cc_Id, new { htmlAttributes = new { @class = "form-control", @id = "cc_Id" } })
                    <label class="text-danger" id="Validation_descipcion" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">No puede dejar campos vacios.</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @*data-dismiss="modal"*@
            <button type="button" class="btn btn-primary pull-left" id="btnActivarRegistroComisiones">Si</button>
            <button type="submit" class="btn btn-white pull-right" data-dismiss="modal" id="btnCerrarModaledit">No</button>

        </div>
    </div>
   
}
