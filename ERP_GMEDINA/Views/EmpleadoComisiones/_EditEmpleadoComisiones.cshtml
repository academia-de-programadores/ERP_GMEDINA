@model ERP_GMEDINA.Models.tbEmpleadoComisiones

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoComisionesEditar" }))
{
    <div class="modal-body" id="Editar">
       
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.cc_Id)

                <div class="form-group">
                    <label class="pull-left">Número</label>
                    <div class="col-md-8 pull-right">
                        @Html.EditorFor(model => model.cc_Id, new { htmlAttributes = new { @class = "form-control", @id = "cc_Id", @disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="pull-left">Colaborador</label> 
                    <label class="" id="AsteriscoEmpleado">*</label> 
                    <div class="col-md-8 pull-right">
                        <select id="emp_Id" name="emp_Id" class="form-control" onchange="ValidarCamposEditar(this.value, '-1', '-1', '-1')"></select>
                        <label class="text-danger" id="Validation_empleado" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Colaborador requerido</label>
                    </div>
                </div>
                <div class="form-group" style="display:none">
                    <label class="pull-left">Comisión</label> 
                    <label class="" id="AsteriscoComision">*</label>  
                    <div class="col-md-8 pull-right">
                        <select id="cin_IdIngreso" name="cin_IdIngreso" class="form-control" onchange="ValidarCamposEditar('-1', this.value, '-1', '-1')"></select>
                        <label class="text-danger" id="Validation_idIngreso" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Comisión requerido</label>
                    </div>
                </div>
                    <div class="form-group">
                        <label class="pull-left">Total Venta</label> 
                        <label class="" id="AsteriscoTotal">*</label>  
                        <div class="col-md-8 pull-right">
                            @Html.EditorFor(model => model.cc_TotalVenta, new { htmlAttributes = new { @class = "text-box single-line MascaraCantidad soloNumero", @autocomplete = "off", @onkeyup = "ValidarCamposEditar('-1', '-1', this.value)" } })
                            @*@Html.ValidationMessageFor(model => model.cc_TotalVenta, "", new { @class = "text-danger", @id = "Validation_descipcion2e" })*@
                            <label class="text-danger" id="Validation_total" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">Campo Total Venta requerido</label>
                            <label class="text-danger" id="Validation_total2" style="display:none; opacity: 1; font-family: open sans, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: normal;">El campo Total Venta debe ser mayor que cero</label>
                        </div>
                    </div>

                </div>
            </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-white pull-right" data-dismiss="modal" id="btnCerrarModaledit">Cerrar</button>
        <button type="submit" class="btn btn-primary pull-left" id="btnUpdateComisionesConfirmar">Actualizar</button>
        <button type="button" class="btn btn-danger pull-left" id="btnInactivarEmpleadoComisiones">Inactivar</button>
    </div>
    }

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoComisionesInactivar" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.cc_Id)
    }
