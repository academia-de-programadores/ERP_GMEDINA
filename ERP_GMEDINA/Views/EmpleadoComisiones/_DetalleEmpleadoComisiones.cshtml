@model ERP_GMEDINA.Models.tbEmpleadoComisiones

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmpleadoComisionesDetalle" }))
{
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.cc_Id)

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.emp_Id, "Colaborador", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="tbEmpleados_tbPersonas_per_Nombres">@Html.DisplayFor(model => model.tbEmpleados.tbPersonas.per_Nombres, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.cin_IdIngreso, "Descripción Ingreso", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
               
                    <span id="tbCatalogoDeIngresos_cin_DescripcionIngreso">@Html.DisplayFor(model => model.tbCatalogoDeIngresos.cin_DescripcionIngreso, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.cc_PorcentajeComision, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="cc_PorcentajeComision">@Html.DisplayFor(model => model.cc_PorcentajeComision, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</span>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.cc_TotalVenta, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="cc_TotalVenta">@Html.DisplayFor(model => model.cc_TotalVenta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</span>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.cc_FechaRegistro, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    <span id="cc_FechaRegistro">@Html.DisplayFor(model => model.cc_FechaRegistro, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</span>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.cc_Pagado, htmlAttributes: new { @class = "control-label" } )
                </div>
                <div class="col-md-6">
                    <span id="cc_Pagado">@Html.DisplayFor(model => model.cc_Pagado, new { htmlAttributes = new { @class = "text-box single-line", @disabled = "disabled" } })</span>
                </div>
            </div>
        </div>

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h4>Auditoría</h4>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <table class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th>Acción</th>
                                <th>Usuario</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Creado</td>
                                @Html.HiddenFor(model => model.cc_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario_usu_NombreUsuario">@Html.EditorFor(model => model.tbUsuario.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="cc_FechaCrea">@Html.EditorFor(model => model.cc_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                            <tr>
                                <td>Modificado</td>
                                @Html.HiddenFor(model => model.cc_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                <td><span id="tbUsuario1_usu_NombreUsuario">@Html.EditorFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                <td><span id="cc_FechaModifica">@Html.EditorFor(model => model.cc_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="footer">

                    <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "EditarEmpleadoComisiones" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.cc_Id)
    }
