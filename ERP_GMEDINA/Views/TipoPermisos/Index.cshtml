@model IEnumerable<ERP_GMEDINA.Models.tbTipoPermisos>

@{
    ViewBag.Title = "Tipo de Permisos";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Permisos</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Tipo  de permiso" />
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th>@Html.DisplayNameFor(model => model.tper_Descripcion)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_Create", new ERP_GMEDINA.Models.tbTipoPermisos())
@Html.Partial("_Delete", new ERP_GMEDINA.Models.tbTipoPermisos())
@Html.Partial("_Edit", new ERP_GMEDINA.Models.tbTipoPermisos())
@Html.Partial("_Detalles", new ERP_GMEDINA.Models.tbTipoPermisos())

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
    @Styles.Render("~/plugins/clockpickerStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/general")
    @Scripts.Render("~/Scripts/app/TipoPermisos")
    @Scripts.Render("~/plugins/clockpicker")
}