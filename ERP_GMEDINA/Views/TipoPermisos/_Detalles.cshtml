@model ERP_GMEDINA.Models.tbTipoPermisos
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Detalle TipoPermisos</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.tper_Descripcion)</dt>
                    <dd id="tper_Descripcion"></dd>

                    @*<dt>@Html.DisplayNameFor(model => model.tper_Estado)</dt>
                    <dd id="tper_Estado"></dd>

                    <dt>@Html.DisplayNameFor(model => model.tper_RazonInactivo)</dt>
                    <dd id="tper_RazonInactivo"></dd>

                    <dt>@Html.DisplayNameFor(model => model.tper_FechaCrea)</dt>
                    <dd id="tper_FechaCrea"></dd>

                    <dt>@Html.DisplayNameFor(model => model.tper_FechaModifica)</dt>
                    <dd id="tper_FechaModifica"></dd>

                    <dt>@Html.DisplayNameFor(model => model.tper_UsuarioCrea)</dt>
                    <dd id="tbUsuario_usu_NombreUsuario"></dd>

                    <dt>@Html.DisplayNameFor(model => model.tper_UsuarioModifica)</dt>
                    <dd id="tbUsuario1_usu_NombreUsuario"></dd>*@

                </dl>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h4>Auditoría</h4>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <table class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Creado</td>
                                    @Html.HiddenFor(model => model.tper_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                    <td><span id="tbUsuario_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                    <td><span id="tper_FechaCrea">@Html.DisplayFor(model => model.tper_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                </tr>
                                <tr>
                                    <td>Modificado</td>
                                    @Html.HiddenFor(model => model.tper_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })
                                    <td><span id="tbUsuario1_usu_NombreUsuario">@Html.DisplayFor(model => model.tbUsuario1.usu_NombreUsuario, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                    <td><span id="tper_FechaModifica">@Html.DisplayFor(model => model.tper_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary pull-left" data-id="" id="btnEditar">Editar</button>
            </div>
        </div>
	</div>
</div>

