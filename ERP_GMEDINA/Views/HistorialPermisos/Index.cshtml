@model ERP_GMEDINA.Models.tbHistorialPermisos
@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Permisos de personal</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar permisos", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th></th>
                                <th>Número</th>
                                <th>Nombre Completo</th>
                                <th>Tipo Permiso</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*MODAL EDITAR
    <div class="modal inmodal" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated fadeIn">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                    <h4 class="modal-title">Editar Observaciónes del permiso</h4>
                </div>
                <div class="modal-body" id="ModalEdit">
                    @Html.Partial("_EditHistorialPermisos", new ERP_GMEDINA.Models.tbHistorialPermisos())
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-danger pull-left" id="btnInactivar">Inactivar</button>
                </div>
            </div>
        </div>
    </div>
    @*MODAL EDITAR*@
@*MODAL Inactivar*@
<div class="modal inmodal" id="ModalInactivar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">¿Seguro que desea inactivar el registro?</h4>
            </div>
            <div class="modal-body" id="ModalInactivar">
                <p>
                    @Html.Partial("_InhabilitarHistorialPermisos", new ERP_GMEDINA.Models.tbHistorialPermisos())
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger pull-right" id="InActivar">Si</button>
            </div>
        </div>
    </div>
</div>
@*MODAL Inactivar*@
@*MODAL DETALLES*@
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Detalles Permiso</h4>
            </div>
            <div class="modal-body" id="ModalDetallesAX">
                <p>
                    @Html.Partial("_DetallesHistorialPermisos", new ERP_GMEDINA.Models.tbHistorialPermisos())
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@*MODAL habilitar*@
<div class="modal fade" id="ModalHabilitar" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                <h4 class="modal-title">Activar</h4>
            </div>
            <div class="modal-body" id="Activar">
                ¿Esta seguro que desea Activar este registro?
            </div>
            <input type="hidden" value="" id="txtIdRestore">
            <div class="modal-footer">
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary pull-right" id="btnActivar" data-dismiss="modal">Si</button>
                <div style="display:none" class="btn pull-right" id="cargandoActivar"></div>
            </div>
        </div>
    </div>
</div>

