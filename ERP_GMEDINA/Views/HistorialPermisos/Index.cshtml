@model IEnumerable<ERP_GMEDINA.Models.tbHistorialPermisos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>HistorialPermisos</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de HistorialPermisos</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar HistorialPermisos" />
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.tbEmpleados.tbPersonas.per_Nombres)
                            @Html.DisplayNameFor(model => model.tbEmpleados.tbPersonas.per_Apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.hper_fechaInicio)</th>
                            <th>@Html.DisplayNameFor(model => model.hper_fechaFin)</th>
                            <th>@Html.DisplayNameFor(model => model.hper_Duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.hper_Observacion)</th>
                            @*<th>@Html.DisplayNameFor(model => model.hper_Justificado)</th>*@
                            <th>@Html.DisplayNameFor(model => model.hper_PorcentajeIndemnizado)</th>
                            <th>@Html.DisplayNameFor(model => model.tbEmpleados.emp_CuentaBancaria)</th>
                            <th>@Html.DisplayNameFor(model => model.tbTipoPermisos.tper_Descripcion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) 
                      {
                        <tr class="gradeA odd" role="row" data-id="@item.hper_Id">
                            <td>@Html.DisplayFor(modelItem => item.tbEmpleados.tbPersonas.per_Nombres)
                            @Html.DisplayFor(modelItem => item.tbEmpleados.tbPersonas.per_Apellidos)</td>
                            <td>@Html.DisplayFor(modelItem => item.hper_fechaInicio)</td>
                            <td>@Html.DisplayFor(modelItem => item.hper_fechaFin)</td>
                            <td>@Html.DisplayFor(modelItem => item.hper_Duracion)</td>
                            <td>@Html.DisplayFor(modelItem => item.hper_Observacion)</td>
                            @*<td>@Html.DisplayFor(modelItem => item.hper_Justificado)</td>*@
                            <td>@Html.DisplayFor(modelItem => item.hper_PorcentajeIndemnizado)</td>
                            <td>@Html.DisplayFor(modelItem => item.tbEmpleados.emp_CuentaBancaria)</td>
                            <td>@Html.DisplayFor(modelItem => item.tbTipoPermisos.tper_Descripcion)</td>
                            <td>
							    @*<a class="btn btn-primary btn-xs " onclick="tablaDetalles(@item.hper_Id)">Detalles</a>
							    <a class="btn btn-default btn-xs " onclick="tablaEditar(@item.hper_Id)">Editar</a>*@
                            </td>
                        </tr>
                      }
                    </tbody>                       
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
