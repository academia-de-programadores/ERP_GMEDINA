@model IEnumerable<ERP_GMEDINA.Models.tbHistorialPermisos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Historial Permisos</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tbHistorialPermisos</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar en Historial Permisos", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th></th>
                                @*<th>@Html.DisplayNameFor(model => model.tb)</th>*@
                                <th>@Html.DisplayNameFor(model => model.tbEmpleados.tbPersonas.per_Nombres)</th>
                                <th>@Html.DisplayNameFor(model => model.tbTipoPermisos.tper_Descripcion)</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA odd" role="row" data-id="@item.hper_Id">
                                    <td></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbEmpleados.tbPersonas.per_Nombres)
                                        @Html.DisplayFor(modelItem => item.tbEmpleados.tbPersonas.per_Apellidos)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbTipoPermisos.tper_Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.hper_Id }, new { @class = "btn btn-default btn-xs" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
