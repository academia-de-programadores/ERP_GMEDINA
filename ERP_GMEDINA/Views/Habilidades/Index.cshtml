@model IEnumerable<ERP_GMEDINA.Models.tbHabilidades>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbHabilidades</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tbHabilidades</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Habilidades" />
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.habi_Descripcion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.habi_Id">
                            <td>@Html.DisplayFor(modelItem => item.habi_Descripcion)</td>
                            <td>
                                @Html.ActionLink("Detalles", "Details", new { id=item.habi_Id },  new {@class = "btn btn-primary btn-xs" })
                                <a class="btn btn-default btn-xs tablaEditar" id="@item.habi_Id">Editar</a>
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
@Html.Partial("_Create", new ERP_GMEDINA.Models.tbHabilidades())
@Html.Partial("_Delete", new ERP_GMEDINA.Models.tbHabilidades())
@Html.Partial("_Edit", new ERP_GMEDINA.Models.tbHabilidades())
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}
@section Scripts {
@Scripts.Render("~/plugins/dataTables")
@Scripts.Render("~/Scripts/app/general/Habilidades")
  @Scripts.Render("~/bundles/jqueryval")
}
