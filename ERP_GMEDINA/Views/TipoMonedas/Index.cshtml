@model IEnumerable<ERP_GMEDINA.Models.tbTipoMonedas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbTipoMonedas</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>List of tbTipoMonedas</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" id="btnAgregarTipoMonedas">Registrar Tipo de Moneda</button>
                       @*@Html.ActionLink("Registrar tbTipoMonedas", "Create", null, new { @class = "btn btn-primary btn-xs"})*@
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.tmon_Descripcion)</th>
                            @*<th>@Html.DisplayNameFor(model => model.tmon_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.tmon_RazonInactivo)</th>*@
                            @*<th>@Html.DisplayNameFor(model => model.tmon_FechaCrea)</th>
                            <th>@Html.DisplayNameFor(model => model.tmon_FechaModifica)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuario1.usu_NombreUsuario)</th>*@
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.tmon_Id">
                            <td>
                                @Html.DisplayFor(modelItem => item.tmon_Descripcion)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.tmon_Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tmon_RazonInactivo)
                            </td>*@
                            @*<td>
                                @Html.DisplayFor(modelItem => item.tmon_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tmon_FechaModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuario1.usu_NombreUsuario)
                            </td>*@
                           <td>
                               <button type="button" class="btn btn-primary btn-xs" id="btnDetails" onclick="tablaDetalle(@item.tmon_Id)" data-toggle="modal" data-target="#ModalDetalles">Detalles</button>
                               <button type="button" class="btn btn-default btn-xs" id="btnEditar" onclick="tablaEditar(@item.tmon_Id)" data-toggle="modal" data-target="#ModalEditar">Editar</button>
                              @*@Html.ActionLink("Detalles", "Details", new { id=item.tmon_Id },  new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.tmon_Id }, new {@class = "btn btn-default btn-xs" })*@
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    

 @*MODAL CREAR*@
<div class="modal inmodal fade" id="ModalCrear" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Crear Tipo de Moneda</h4>
            </div>
            <div class="modal-body">
                <p>
                    @*--PARTIAL VIEW AQUI--*@
                    @Html.Partial("_CreateTipoMonedas", new ERP_GMEDINA.Models.tbTipoMonedas())
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAgregar" data-dismiss="modal">Agregar</button>
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL CREAR*@

@*MODAL EDITAR*@
<div class="modal inmodal fade" id="ModalEditar" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Editar Moneda</h4>
            </div>
            <div class="modal-body" id="ModalEdit">
                @*--PARTIAL VIEW AQUI--*@
                @Html.Partial("_EditTipoMonedas", new ERP_GMEDINA.Models.tbTipoMonedas())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" id="btnEditarModal" data-dismiss="modal">Editar</button>
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL EDITAR*@

@*MODAL DETALLES*@
<div class="modal inmodal" id="ModalDetalles" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Cerrar</span></button>

                <h4 class="modal-title">Detalles de la Moneda</h4>

            </div>
            <div class="modal-body" id="ModalDetallesR">
                <p>
                    @Html.Partial("_DetallesTipoMonedas", new ERP_GMEDINA.Models.tbTipoMonedas())
                </p>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary pull-left" id="btnEditarM" data-id="" data-target="#ModalEditar" onclick="" data-dismiss="modal">Editar</button>
                <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@*MODAL DETALLES*@

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/plugins/izitoast/iziToast")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
  @Scripts.Render("~/Scripts/app/General/TipoMonedas")
  @Scripts.Render("~/plugins/izitoast")
}

