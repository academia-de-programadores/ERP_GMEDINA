@model IEnumerable<ERP_GMEDINA.Models.tbRequisiciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Requisiciones</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Requisiciones</h5>
                    <div class="ibox-tools">
                        <input type="button" id="btnAgregar" class="btn btn-primary btn-xs" value="Registrar Requisiciones" />
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.req_Experiencia)</th>
                            <th>@Html.DisplayNameFor(model => model.req_Sexo)</th>
                            <th>@Html.DisplayNameFor(model => model.req_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.req_EdadMinima)</th>
                            <th>@Html.DisplayNameFor(model => model.req_EdadMaxima)</th>
                            <th>@Html.DisplayNameFor(model => model.req_EstadoCivil)</th>
                            <th>@Html.DisplayNameFor(model => model.req_EducacionSuperior)</th>
                            <th>@Html.DisplayNameFor(model => model.req_Permanente)</th>
                            <th>@Html.DisplayNameFor(model => model.req_Duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.req_Vacantes)</th>
                            <th>@Html.DisplayNameFor(model => model.req_FechaRequisicion)</th>
                            <th>@Html.DisplayNameFor(model => model.req_FechaContratacion)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) 
                      {
                        <tr class="gradeA odd" role="row" data-id="@item.req_Id">
                            <td>@Html.DisplayFor(modelItem => item.req_Experiencia)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_Sexo)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_EdadMinima)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_EdadMaxima)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_EstadoCivil)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_EducacionSuperior)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_Permanente)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_Duracion)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_Vacantes)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_FechaRequisicion)</td>
                            <td>@Html.DisplayFor(modelItem => item.req_FechaContratacion)</td>
                            <td>
							    <a class="btn btn-primary btn-xs " onclick="tablaDetalles(@item.req_Id)">Detalles</a>
							    <a class="btn btn-default btn-xs " onclick="tablaEditar(@item.req_Id)">Editar</a>
                            </td>
                        </tr>
                      }
                    </tbody>                       
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
